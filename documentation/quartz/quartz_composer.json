    "doc://com.apple.documentation/documentation/quartz/qcplugin": {
      "title": "QCPlugIn",
      "type": "topic",
      "identifier": "doc://com.apple.documentation/documentation/quartz/qcplugin",
      "kind": "symbol",
      "role": "symbol",
      "url": "/documentation/quartz/qcplugin",
      "abstract": [
        {
          "type": "text",
          "text": "The "
        },
        {
          "type": "codeVoice",
          "code": "QCPlugIn"
        },
        {
          "type": "text",
          "text": " class provides the base class to subclass for writing custom  Quartz Composer patches. You implement a custom patch by subclassing "
        },
        {
          "type": "codeVoice",
          "code": "QCPlugIn"
        },
        {
          "type": "text",
          "text": ", overriding the appropriate methods, packaging the code as an "
        },
        {
          "type": "codeVoice",
          "code": "NSBundle"
        },
        {
          "type": "text",
          "text": " object, and installing the bundle in the appropriate location. A bundle can contain more than one subclass  of "
        },
        {
          "type": "codeVoice",
          "code": "QCPlugIn"
        },
        {
          "type": "text",
          "text": ", allowing you to provide a suite of custom patches in one bundle. "
        },
        {
          "type": "link",
          "title": "Quartz Composer Custom Patch Programming Guide",
          "destination": "https://developer.apple.com/library/archive/documentation/GraphicsImaging/Conceptual/QuartzComposer_Patch_PlugIn_ProgGuide/Introduction/Introduction.html#//apple_ref/doc/uid/TP40004787"
        },
        {
          "type": "text",
          "text": " provides detailed instructions on how to create and package a custom patch. "
        },
        {
          "type": "emphasis",
          "inlineContent": [
            {
              "type": "text",
              "text": "QCPlugIn Class Reference"
            }
          ]
        },
        {
          "type": "text",
          "text": " supplements the information in the programming guide."
        }
      ],
      "deprecated": true
    },
    "doc://com.apple.documentation/documentation/quartz/qcpluginviewcontroller": {
