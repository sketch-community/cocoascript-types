{
  "abstract": [
    {
      "type": "text",
      "text": "A key for the mouse location. The associated value is an "
    },
    {
      "type": "reference",
      "isActive": true,
      "identifier": "doc://com.apple.documentation/documentation/foundation/nspoint"
    },
    {
      "type": "text",
      "text": " object stored in an "
    },
    {
      "type": "reference",
      "isActive": true,
      "identifier": "doc://com.apple.documentation/documentation/foundation/nsvalue"
    },
    {
      "type": "text",
      "text": " object. The mouse location is in normalized coordinates relative to the OpenGL context viewport ("
    },
    {
      "type": "codeVoice",
      "code": "[0,1]x[0,1]"
    },
    {
      "type": "text",
      "text": " with the origin "
    },
    {
      "type": "codeVoice",
      "code": "(0,0)"
    },
    {
      "type": "text",
      "text": " at the lower-left corner)."
    }
  ],
