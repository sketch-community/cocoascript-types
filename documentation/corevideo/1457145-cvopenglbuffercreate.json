          "name": "allocator",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The allocator to use to create the Core Video OpenGL buffer. Pass "
                },
                {
                  "type": "codeVoice",
                  "code": "NULL"
                },
                {
                  "type": "text",
                  "text": " to specify the default allocator. "
                }
              ]
            }
          ]
        },
        {
          "name": "width",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The width of the buffer in pixels."
                }
              ]
            }
          ]
        },
        {
          "name": "height",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The height of the buffer in pixels."
                }
              ]
            }
          ]
        },
        {
          "name": "attributes",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "A Core Foundation dictionary containing other desired attributes of the buffer (texture target, internal format, max mipmap level, etc.). May be "
                },
                {
                  "type": "codeVoice",
                  "code": "NULL"
                },
                {
                  "type": "text",
                  "text": ". The following attribute values are assumed if you do not explicitly define them:"
                }
              ]
            },
            {
              "type": "unorderedList",
              "items": [
                {
                  "content": [
                    {
                      "type": "paragraph",
                      "inlineContent": [
                        {
                          "type": "codeVoice",
                          "code": "kCVOpenGLBufferTarget"
                        },
                        {
                          "type": "text",
                          "text": " = "
                        },
                        {
                          "type": "codeVoice",
                          "code": "GL_TEXTURE_RECTANGLE_EXT"
                        }
                      ]
                    }
                  ]
                },
                {
                  "content": [
                    {
                      "type": "paragraph",
                      "inlineContent": [
                        {
                          "type": "codeVoice",
                          "code": "kCVOpenGLBufferInternalFormat"
                        },
                        {
                          "type": "text",
                          "text": " = "
                        },
                        {
                          "type": "codeVoice",
                          "code": "GL_RGBA"
                        }
                      ]
                    }
                  ]
                },
                {
                  "content": [
                    {
                      "type": "paragraph",
                      "inlineContent": [
                        {
                          "type": "codeVoice",
                          "code": "kCVOpenGLBufferMaximumMipmapLevel"
                        },
                        {
                          "type": "text",
                          "text": " = 0"
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "name": "bufferOut",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "On output, "
                },
                {
                  "type": "codeVoice",
                  "code": "bufferOut"
                },
                {
                  "type": "text",
                  "text": " points to the newly created OpenGL buffer."
                }
              ]
            }
          ]
