          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "Any animations will be interpreted on the video's timeline, not real-time, so you should:"
            }
          ]
        },
        {
          "type": "orderedList",
          "items": [
            {
              "content": [
                {
                  "type": "paragraph",
                  "inlineContent": [
                    {
                      "type": "text",
                      "text": "Set animationsâ€™ "
                    },
                    {
                      "type": "reference",
                      "isActive": true,
                      "identifier": "doc://com.apple.documentation/documentation/quartzcore/camediatiming/1427654-begintime"
                    },
                    {
                      "type": "text",
                      "text": " property to "
                    },
                    {
                      "type": "reference",
                      "isActive": true,
                      "identifier": "doc://com.apple.documentation/documentation/avfoundation/avcoreanimationbegintimeatzero"
                    },
                    {
                      "type": "text",
                      "text": " rather than "
                    },
                    {
                      "type": "codeVoice",
                      "code": "0"
                    },
                    {
                      "type": "text",
                      "text": " (which CoreAnimation replaces with "
                    },
                    {
                      "type": "reference",
                      "isActive": true,
                      "identifier": "doc://com.apple.documentation/documentation/quartzcore/1395996-cacurrentmediatime"
                    },
                    {
                      "type": "text",
                      "text": "); "
                    }
                  ]
                }
              ]
            },
            {
              "content": [
                {
                  "type": "paragraph",
                  "inlineContent": [
                    {
                      "type": "text",
                      "text": "Set "
                    },
                    {
                      "type": "reference",
                      "isActive": true,
                      "identifier": "doc://com.apple.documentation/documentation/quartzcore/caanimation/1412458-removedoncompletion"
                    },
                    {
                      "type": "text",
                      "text": " to "
                    },
                    {
                      "type": "reference",
                      "isActive": false,
                      "identifier": "doc://com.apple.documentation/documentation/objectivec/no"
                    },
                    {
                      "type": "text",
                      "text": " on animations so they are not automatically removed;"
