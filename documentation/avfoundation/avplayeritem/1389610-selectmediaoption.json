            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The option to select."
                }
              ]
            },
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "If the value of the "
                },
                {
                  "type": "reference",
                  "isActive": true,
                  "identifier": "doc://com.apple.documentation/documentation/avfoundation/avmediaselectiongroup/1388483-allowsemptyselection"
                },
                {
                  "type": "text",
                  "text": " property of "
                },
                {
                  "type": "codeVoice",
                  "code": "mediaSelectionGroup"
                },
                {
                  "type": "text",
                  "text": " is "
                },
                {
                  "type": "reference",
                  "isActive": false,
                  "identifier": "doc://com.apple.documentation/documentation/objectivec/yes"
                },
                {
                  "type": "text",
                  "text": ", you can pass "
                },
                {
                  "type": "codeVoice",
                  "code": "nil"
                },
                {
                  "type": "text",
                  "text": " to deselect all media selection options in the group."
                }
              ]
            }
          ]
        },
        {
          "name": "mediaSelectionGroup",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The media selection group, obtained from the receiver's asset, that contains "
                },
                {
                  "type": "codeVoice",
                  "code": "mediaSelectionOption"
                },
                {
                  "type": "text",
                  "text": "."
                }
              ]
            }
          ]
        }
      ]
