      "content": [
        {
          "anchor": "overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "Regardless of the file’s actual format, you read and write it using "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/avfoundation/avaudiopcmbuffer"
            },
            {
              "type": "text",
              "text": " objects that contain samples using "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/avfoundation/avaudiocommonformat"
            },
            {
              "type": "text",
              "text": ". This format is referred to as the file’s processing format. Conversions are performed to and from the file’s actual format."
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "Reads and writes are always sequential, but random access is possible by setting the "
            },
            {
              "type": "codeVoice",
              "code": "framePosition"
            },
            {
              "type": "text",
              "text": " property."
            }
          ]
        }
      ]
    }
