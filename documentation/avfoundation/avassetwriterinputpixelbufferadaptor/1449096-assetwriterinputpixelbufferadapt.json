    {
      "kind": "parameters",
      "languages": [
        "occ"
      ],
      "parameters": [
        {
          "name": "input",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The asset writer input to which the receiver should append pixel buffers."
                }
              ]
            },
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "Currently, only asset writer inputs that accept media data of type "
                },
                {
                  "type": "codeVoice",
                  "code": "AVMediaTypeVideo"
                },
                {
                  "type": "text",
                  "text": " can be used to initialize a pixel buffer adaptor."
                }
              ]
            },
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "It is an error to pass a sample buffer input that is already attached to another instance of "
                },
                {
                  "type": "codeVoice",
                  "code": "AVAssetWriterInputPixelBufferAdaptor"
                },
                {
                  "type": "text",
                  "text": "."
                }
              ]
            }
          ]
        },
        {
          "name": "sourcePixelBufferAttributes",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The attributes of pixel buffers that will be vended by the input's CVPixelBufferPool."
                }
              ]
            },
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "Pixel buffer attributes keys for the pixel buffer pool are defined in "
                },
                {
                  "type": "codeVoice",
                  "code": "<CoreVideo/CVPixelBuffer.h>"
                },
                {
                  "type": "text",
                  "text": ". To take advantage of the improved efficiency of appending buffers created from the adaptorâ€™s pixel buffer pool, you should specify pixel buffer attributes that most closely accommodate the source format of the video frames being appended."
                }
              ]
            },
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "Pass "
                },
                {
                  "type": "codeVoice",
                  "code": "nil"
                },
                {
                  "type": "text",
                  "text": " if you do not need a pixel buffer pool for allocating buffers."
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "kind": "content",
      "content": [
        {
          "anchor": "return_value",
          "level": 2,
          "text": "Return Value",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "A new pixel buffer adaptor to receive pixel buffers for writing to the output file."
            }
          ]
        }
      ]
    },
    {
      "kind": "content",
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "To specify the pixel format type, the "
            },
            {
              "type": "codeVoice",
              "code": "pixelBufferAttributes"
            },
            {
              "type": "text",
              "text": " dictionary should contain a value for kCVPixelBufferPixelFormatTypeKey. For example, use "
            },
            {
              "type": "codeVoice",
              "code": "[NSNumber numberWithInt:kCVPixelFormatType_32BGRA]"
            },
            {
              "type": "text",
              "text": " for 8-bit-per-channel BGRA, or use "
            },
            {
              "type": "codeVoice",
              "code": "[NSNumber numberWithInt:kCVPixelFormatType_420YpCbCr8BiPlanarVideoRange]"
            },
            {
              "type": "text",
              "text": " for 2-plane YCbCr."
            }
          ]
        }
      ]
    }
