        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "For virtual cameras, like "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/avfoundation/avcapturedevicetypebuiltindualcamera"
            },
            {
              "type": "text",
              "text": " or "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/avfoundation/avcapturedevicetypebuiltintriplecamera"
            },
            {
              "type": "text",
              "text": ", this value represents the smallest minimum focus distance of the autofocus-capable cameras that it sources."
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "This value is "
            },
            {
              "type": "codeVoice",
              "code": "-1"
            },
            {
              "type": "text",
              "text": " if the distance is unknown."
            }
          ]
        }
      ]
    }
