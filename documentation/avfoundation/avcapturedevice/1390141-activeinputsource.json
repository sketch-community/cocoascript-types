      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "You use this property to get or set the currently active input source."
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "To set the format, you must first obtain exclusive access to the receiver using "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/avfoundation/avcapturedevice/1387810-lockforconfiguration"
            },
            {
              "type": "text",
              "text": ". If you do not obtain exclusive access, "
            },
            {
              "type": "codeVoice",
              "code": "setActiveInputSource:"
            },
            {
              "type": "text",
              "text": " throws a "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/foundation/nsgenericexception"
            },
            {
              "type": "text",
              "text": "."
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "The set method, "
            },
            {
              "type": "codeVoice",
              "code": "setActiveInputSource:"
            },
            {
              "type": "text",
              "text": ", throws an "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/foundation/nsinvalidargumentexception"
            },
            {
              "type": "text",
              "text": " if you pass a format not present in the "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/avfoundation/avcapturedevice/1388738-formats"
            },
            {
              "type": "text",
              "text": " array."
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "You can observe changes to the value of this property using "
            },
            {
              "type": "link",
              "title": "Key-value observing",
              "destination": "https://developer.apple.com/library/archive/documentation/General/Conceptual/DevPedia-CocoaCore/KVO.html#//apple_ref/doc/uid/TP40008195-CH16"
            },
            {
              "type": "text",
              "text": "."
            }
          ]
        }
      ]
    }
