            {
              "type": "reference",
              "isActive": false,
              "identifier": "doc://com.apple.documentation/documentation/scenekit/scnlevelofdetail"
            },
            {
              "type": "text",
              "text": " object with the smallest "
            },
            {
              "type": "codeVoice",
              "code": "radius"
            },
            {
              "type": "text",
              "text": " parameter larger than that circle."
            }
          ]
        }
