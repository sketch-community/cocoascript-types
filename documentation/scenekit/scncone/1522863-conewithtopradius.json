      ],
      "parameters": [
        {
          "name": "topRadius",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The radius of the cone’s top, forming a circle in the x- and z-axis dimensions of its local coordinate space."
                }
              ]
            }
          ]
        },
        {
          "name": "bottomRadius",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The radius of the cone’s base, forming a circle in the x- and z-axis dimensions of its local coordinate space."
                }
              ]
            }
          ]
        },
        {
          "name": "height",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The height of the cone along the y-axis of its local coordinate space."
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "kind": "content",
      "content": [
        {
          "anchor": "return_value",
          "level": 2,
          "text": "Return Value",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "A new cone geometry."
            }
          ]
        }
      ]
    },
    {
      "kind": "content",
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "The cone is centered in its local coordinate system. For example, if you create a cone whose bottom radius is "
            },
            {
              "type": "codeVoice",
              "code": "5.0"
            },
            {
              "type": "text",
              "text": ", top radius is "
            },
            {
              "type": "codeVoice",
              "code": "0.0"
            },
            {
              "type": "text",
              "text": ", and height is "
            },
            {
              "type": "codeVoice",
              "code": "10.0"
            },
            {
              "type": "text",
              "text": ", its apex is at the point "
            },
            {
              "type": "codeVoice",
              "code": "{0, 5.0, 0}"
            },
            {
              "type": "text",
              "text": ", and its base lies in the plane whose y-coordinate is "
            },
            {
              "type": "codeVoice",
              "code": "-5.0"
            },
            {
              "type": "text",
              "text": ", extending from "
            },
            {
              "type": "codeVoice",
              "code": "-5.0"
            },
            {
              "type": "text",
              "text": " to "
            },
            {
              "type": "codeVoice",
              "code": "5.0"
            },
            {
              "type": "text",
              "text": " along both the x- and z-axes."
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "Pass zero for "
            },
            {
              "type": "codeVoice",
              "code": "topRadius"
            },
            {
              "type": "text",
              "text": " or "
            },
            {
              "type": "codeVoice",
              "code": "bottomRadius"
            },
            {
              "type": "text",
              "text": " or parameter to create a cone whose sides taper to a single point, or a different value to create a frustum with a circular top."
            }
          ]
        }
      ]
    }
