      "parameters": [
        {
          "name": "data",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The data for the geometry source."
                }
              ]
            }
          ]
        },
        {
          "name": "semantic",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The semantic value (or attribute) that the geometry source describes for each vertex. See Geometry Semantic Identifiers for available values."
                }
              ]
            }
          ]
        },
        {
          "name": "vectorCount",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The number of geometry source vectors."
                }
              ]
            }
          ]
        },
        {
          "name": "floatComponents",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "A Boolean value that indicates whether vector components are floating-point values. Specify "
                },
                {
                  "type": "reference",
                  "isActive": false,
                  "identifier": "doc://com.apple.documentation/documentation/objectivec/yes"
                },
                {
                  "type": "text",
                  "text": " for floating-point values, or "
                },
                {
                  "type": "reference",
                  "isActive": false,
                  "identifier": "doc://com.apple.documentation/documentation/objectivec/no"
                },
                {
                  "type": "text",
                  "text": " for integer values."
                }
              ]
            }
          ]
        },
        {
          "name": "componentsPerVector",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The number of scalar components in each vector."
                }
              ]
            }
          ]
        },
        {
          "name": "bytesPerComponent",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The size, in bytes, of each vector component."
                }
              ]
            }
          ]
        },
        {
          "name": "offset",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The offset, in bytes, from the beginning of the data to the first vector component to be used in the geometry source."
                }
              ]
            }
          ]
        },
        {
          "name": "stride",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The number of bytes from each vector to the next in the data."
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "kind": "content",
