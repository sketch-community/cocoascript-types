      ],
      "parameters": [
        {
          "name": "baseGeometry",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The geometry whose surface the skinner’s animation skeleton deforms."
                }
              ]
            }
          ]
        },
        {
          "name": "bones",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "An array of "
                },
                {
                  "type": "reference",
                  "isActive": true,
                  "identifier": "doc://com.apple.documentation/documentation/scenekit/scnnode"
                },
                {
                  "type": "text",
                  "text": " objects, each representing a bone or control point for the animation skeleton."
                }
              ]
            }
          ]
        },
        {
          "name": "boneInverseBindTransforms",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "An array of "
                },
                {
                  "type": "reference",
                  "isActive": true,
                  "identifier": "doc://com.apple.documentation/documentation/foundation/nsvalue"
                },
                {
                  "type": "text",
                  "text": " objects containing "
                },
                {
                  "type": "reference",
                  "isActive": true,
                  "identifier": "doc://com.apple.documentation/documentation/scenekit/scnmatrix4"
                },
                {
                  "type": "text",
                  "text": " transforms, each of which corresponds to a node in the "
                },
                {
                  "type": "reference",
                  "isActive": true,
                  "identifier": "doc://com.apple.documentation/documentation/scenekit/scnskinner/1522732-bones"
                },
                {
                  "type": "text",
                  "text": " array. Each value is the inverse of the bone node's transform from bind space (that is, of the concatenation of all transforms from the skeleton root down to that bone) in the skeleton's default pose."
                }
              ]
            }
          ]
        },
        {
          "name": "boneWeights",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The geometry source defining the influence of each bone on the positions of vertices in the geometry. For details, see the "
                },
                {
                  "type": "reference",
                  "isActive": true,
                  "identifier": "doc://com.apple.documentation/documentation/scenekit/scnskinner/1522986-boneweights"
                },
                {
                  "type": "text",
                  "text": " property."
                }
              ]
            }
          ]
        },
        {
          "name": "boneIndices",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The geometry source defining the mapping from bone indices in skeleton data to the skinner’s bones array. For details, see the "
                },
                {
                  "type": "reference",
                  "isActive": true,
                  "identifier": "doc://com.apple.documentation/documentation/scenekit/scnskinner/1524117-boneindices"
                },
                {
                  "type": "text",
                  "text": " property."
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "kind": "content",
      "content": [
        {
          "anchor": "return_value",
          "level": 2,
          "text": "Return Value",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "A new skinner object."
            }
          ]
        }
      ]
    },
    {
      "kind": "content",
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "To use the skinner object in a scene, assign it to the "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/scenekit/scnnode/1407953-skinner"
            },
            {
              "type": "text",
              "text": " property of a node. That node’s "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/scenekit/scnnode/1407966-geometry"
            },
            {
              "type": "text",
              "text": " property should reference the same "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/scenekit/scngeometry"
            },
            {
              "type": "text",
              "text": " object as the skinner’s "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/scenekit/scnskinner/1522823-basegeometry"
            },
            {
              "type": "text",
              "text": " property."
            }
          ]
        }
      ]
    }
