        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "This property reports the size of the smallest bounding rectangle containing the text. "
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "This size does not necessarily match that of the layout rectangle specified by the "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/scenekit/scntext/1523654-containerframe"
            },
            {
              "type": "text",
              "text": " property. A long body of text may overflow the layout rectangle, depending on the values of the "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/scenekit/scntext/1523585-wrapped"
            },
            {
              "type": "text",
              "text": " and "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/scenekit/scntext/1523414-truncationmode"
            },
            {
              "type": "text",
              "text": " properties, and a short string of text may fit in an area smaller than the layout rectangle."
            }
          ]
        }
      ]
    }
