      "parameters": [
        {
          "name": "properties",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "An array containing one or more of the constants listed in "
                },
                {
                  "type": "codeVoice",
                  "code": "Particle Property Keys"
                },
                {
                  "type": "text",
                  "text": ", each of which specifies a property of the appearance or behaviors of particles in the particle system."
                }
              ]
            }
          ]
        },
        {
          "name": "stage",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The stage of SceneKit’s particle simulation during which to call the block. See "
                },
                {
                  "type": "reference",
                  "isActive": true,
                  "identifier": "doc://com.apple.documentation/documentation/scenekit/scnparticlemodifierstage"
                },
                {
                  "type": "text",
                  "text": " for allowed values."
                }
              ]
            }
          ]
        },
        {
          "name": "block",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "A "
                },
                {
                  "type": "reference",
                  "isActive": true,
                  "identifier": "doc://com.apple.documentation/documentation/scenekit/scnparticlemodifierblock"
                },
                {
                  "type": "text",
                  "text": " block to be called every time SceneKit renders a frame. In this block you can modify the properties of all particles in the system."
                }
              ]
