      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "The box is centered in its local coordinate system. For example, if you create a box whose width, height and length are all "
            },
            {
              "type": "codeVoice",
              "code": "10.0"
            },
            {
              "type": "text",
              "text": ", it extends from "
            },
            {
              "type": "codeVoice",
              "code": "-5.0"
            },
            {
              "type": "text",
              "text": " to "
            },
            {
              "type": "codeVoice",
              "code": "5.0"
            },
            {
              "type": "text",
              "text": " along in each of the x-, y-, and z-axes."
            }
          ]
        }
      ]
