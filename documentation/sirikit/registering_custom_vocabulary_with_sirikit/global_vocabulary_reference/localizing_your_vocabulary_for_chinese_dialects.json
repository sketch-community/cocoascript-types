  "primaryContentSections": [
    {
      "kind": "content",
      "content": [
        {
          "anchor": "overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "For specific localizations, additional rules apply when specify values for the "
            },
            {
              "type": "codeVoice",
              "code": "VocabularyItemPronunciation"
            },
            {
              "type": "text",
              "text": " key:"
            }
          ]
        },
        {
          "type": "unorderedList",
          "items": [
            {
              "content": [
                {
                  "type": "paragraph",
                  "inlineContent": [
                    {
                      "type": "text",
                      "text": "zh_CN: China Mandarin localization: "
                    }
                  ]
                },
                {
                  "type": "unorderedList",
                  "items": [
                    {
                      "content": [
                        {
                          "type": "paragraph",
                          "inlineContent": [
                            {
                              "type": "text",
                              "text": "Tones are represented using the numbers 1, 2, 3, 4, and 5. Use the number 5 for the neutral tone. Place tones at the end of the Pinyin representation of each character. For example, "
                            },
                            {
                              "type": "codeVoice",
                              "code": "ping2 guo3"
                            },
                            {
                              "type": "text",
                              "text": "."
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "content": [
                        {
                          "type": "paragraph",
                          "inlineContent": [
                            {
                              "type": "text",
                              "text": "You can replace the special character "
                            },
                            {
                              "type": "codeVoice",
                              "code": "ü"
                            },
                            {
                              "type": "text",
                              "text": " in Pinyin with "
                            },
                            {
                              "type": "codeVoice",
                              "code": "yu"
                            },
                            {
                              "type": "text",
                              "text": ". For example, "
                            },
                            {
                              "type": "codeVoice",
                              "code": "nü"
                            },
                            {
                              "type": "text",
                              "text": " would become "
                            },
                            {
                              "type": "codeVoice",
                              "code": "nyu"
                            },
                            {
                              "type": "text",
                              "text": "."
                            }
                          ]
                        }
                      ]
                    }
                  ]
                }
              ]
            },
            {
              "content": [
                {
                  "type": "paragraph",
                  "inlineContent": [
                    {
                      "type": "text",
                      "text": "zh_TW: Taiwan Mandarin localization:"
                    }
                  ]
                },
                {
                  "type": "unorderedList",
                  "items": [
                    {
                      "content": [
                        {
                          "type": "paragraph",
                          "inlineContent": [
                            {
                              "type": "text",
                              "text": "Tones are represented using the numbers 1, 2, 3, 4, and 5. Use the number 5 for the neutral tone. Place tones at the end of the Pinyin representation of each character. For example, 蘇打綠 becomes "
                            },
                            {
                              "type": "codeVoice",
                              "code": "su1 da3 lyu4"
                            },
                            {
                              "type": "text",
                              "text": "."
                            }
                          ]
                        }
                      ]
                    }
                  ]
                }
              ]
            },
            {
              "content": [
                {
                  "type": "paragraph",
                  "inlineContent": [
                    {
                      "type": "text",
                      "text": "zh_HK: Hong Kong Cantonese localization:"
                    }
                  ]
                },
                {
                  "type": "unorderedList",
                  "items": [
                    {
                      "content": [
                        {
                          "type": "paragraph",
                          "inlineContent": [
                            {
                              "type": "text",
                              "text": "Use the Jyutping 粤语拼音 (粤拼) romanization system for Cantonese."
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "content": [
                        {
                          "type": "paragraph",
                          "inlineContent": [
                            {
                              "type": "text",
                              "text": "Tones are represented using the numbers 1, 2, 3, 4, 5, and 6. Place tone numbers at the end of the Jyutping. For example, 的士 becomes "
                            },
                            {
                              "type": "codeVoice",
                              "code": "dik1 si2"
                            },
                            {
                              "type": "text",
                              "text": ", and 短訊 becomes "
                            },
                            {
                              "type": "codeVoice",
                              "code": "dyun2 seon2"
                            },
                            {
                              "type": "text",
                              "text": "."
                            }
                          ]
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": []
        }
      ]
    }
