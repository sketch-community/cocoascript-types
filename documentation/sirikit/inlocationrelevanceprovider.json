          "inlineContent": [
            {
              "type": "text",
              "text": "Ask the user for permission to use their location before providing shortcuts to "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/sirikit/inrelevantshortcutstore"
            },
            {
              "type": "text",
              "text": " that include a location relevance provider. If the user gives your app permission to access their location While In Use or Always"
            },
            {
              "type": "emphasis",
              "inlineContent": [
                {
                  "type": "text",
                  "text": ", "
                }
              ]
            },
            {
              "type": "text",
              "text": "shortcuts your app provides can influence widget stacks and the Siri watch face."
            }
          ]
        }
      ]
