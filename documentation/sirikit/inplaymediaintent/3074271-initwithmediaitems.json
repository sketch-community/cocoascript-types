    {
      "kind": "parameters",
      "languages": [
        "occ"
      ],
      "parameters": [
        {
          "name": "mediaItems",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The media content, such as a song or episode of TV show, that the user is playing. When donating the intent, the system uses only the first item in the array, ignoring the other media items in the array."
                }
              ]
            }
          ]
        },
        {
          "name": "mediaContainer",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The container of the media item. For example, when the user plays a song from the playlist, the playlist is the container. A television show with multiple episodes is another example. However, some media items, like movies, may have no container."
                }
              ]
            }
          ]
        },
        {
          "name": "playShuffled",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "A Boolean value that indicates whether the media plays in a shuffled order."
                }
              ]
            }
          ]
        },
        {
          "name": "playbackRepeatMode",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The repeat mode setting at the time the user plays the media item."
                }
              ]
            }
          ]
        },
        {
          "name": "resumePlayback",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The resume playback setting at the time the user plays the media item. Set to "
                },
                {
                  "type": "reference",
                  "isActive": false,
                  "identifier": "doc://com.apple.documentation/documentation/objectivec/yes"
                },
                {
                  "type": "text",
                  "text": " when the user hasn't finished listening to or watching the media item."
                }
              ]
            }
          ]
        },
        {
          "name": "playbackQueueLocation",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The location in the queue to play the media item."
                }
              ]
            }
          ]
        },
        {
          "name": "playbackSpeed",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The speed to play the media item."
                }
              ]
            }
          ]
        },
        {
          "name": "mediaSearch",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The search parameters for a media item."
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "kind": "content",
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "The "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/sirikit/inplaymediaintent"
            },
            {
              "type": "text",
              "text": " object should include information about the media that accurately represents the content. For example, if the user plays a song from a particular album, include both pieces of information in the intent. Provide the song in "
            },
            {
              "type": "codeVoice",
              "code": "mediaItems"
            },
            {
              "type": "text",
              "text": " and the album in "
            },
            {
              "type": "codeVoice",
              "code": "mediaContainer"
            },
            {
              "type": "text",
              "text": ". If your app supports options for shuffle play, repeat modes, and resuming playback, include the current settings for those options when creating the intent."
            }
          ]
        }
      ]
    }
