                    "content": [
                      {
                        "type": "paragraph",
                        "inlineContent": [
                          {
                            "type": "text",
                            "text": "The "
                          },
                          {
                            "type": "reference",
                            "isActive": true,
                            "identifier": "doc://com.apple.documentation/documentation/sirikit/inpaybillintentresponse"
                          },
                          {
                            "type": "text",
                            "text": " object containing the details to confirm with the user. This parameter must not be "
                          },
                          {
                            "type": "codeVoice",
                            "code": "nil"
                          },
                          {
                            "type": "text",
                            "text": "."
                          }
                        ]
