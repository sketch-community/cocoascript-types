      "parameters": [
        {
          "name": "amountType",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "A constant indicating an account-specific amount. Use this parameter to specify whether the payment amount represents the minimum amount due, the current account balance, or the amount due. If the amount does not correspond to any of those values, specify "
                },
                {
                  "type": "reference",
                  "isActive": true,
                  "identifier": "doc://com.apple.documentation/documentation/sirikit/inamounttype/inamounttypeunknown"
                },
                {
                  "type": "text",
                  "text": "."
                }
              ]
            }
          ]
        },
        {
          "name": "amount",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The numerical amount to apply to the payment. Use this parameter to specify the precise amount being applied to the bill."
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "kind": "content",
      "content": [
        {
          "anchor": "return_value",
          "level": 2,
          "text": "Return Value",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "An initialized payment amount object, or "
            },
            {
              "type": "codeVoice",
              "code": "nil"
            },
            {
              "type": "text",
              "text": " if the object could not be created."
            }
          ]
        }
      ]
    },
    {
      "kind": "content",
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "When creating an "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/sirikit/inpaymentamount"
            },
            {
              "type": "text",
              "text": " object, specify as much information as you have available. Specifically, include a value for the "
            },
            {
              "type": "codeVoice",
              "code": "amount"
            },
            {
              "type": "text",
              "text": " parameter indicating the amount of money to debit from the user’s account. If that value also represents a specific amount type, such as the balance due on the account, specify an appropriate constant in the "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/sirikit/inpaymentamount/2799130-amounttype"
            },
            {
              "type": "text",
              "text": " property."
            }
          ]
        }
      ]
    }
