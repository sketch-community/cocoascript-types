        {
          "level": 3,
          "type": "heading",
          "text": "Configure the Sample Code Project",
          "anchor": "3878741"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "Before you run the sample code project in Xcode:"
            }
          ]
        },
        {
          "type": "orderedList",
          "items": [
            {
              "content": [
                {
                  "type": "paragraph",
                  "inlineContent": [
                    {
                      "type": "text",
                      "text": "Set your bundle identifier."
                    }
                  ]
                },
                {
                  "type": "unorderedList",
                  "items": [
                    {
                      "content": [
                        {
                          "type": "paragraph",
                          "inlineContent": [
                            {
                              "type": "text",
                              "text": "Select the CoreDataCloudKitDemo project."
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "content": [
                        {
                          "type": "paragraph",
                          "inlineContent": [
                            {
                              "type": "text",
                              "text": "Select the General tab."
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "content": [
                        {
                          "type": "paragraph",
                          "inlineContent": [
                            {
                              "type": "text",
                              "text": "In the Identity section, set the Bundle Identifier to your reverse domain name followed by the project name."
                            }
                          ]
                        }
                      ]
                    }
                  ]
                }
              ]
            },
            {
              "content": [
                {
                  "type": "paragraph",
                  "inlineContent": [
                    {
                      "type": "text",
                      "text": "Set your development team."
                    }
                  ]
                },
                {
                  "type": "unorderedList",
                  "items": [
                    {
                      "content": [
                        {
                          "type": "paragraph",
                          "inlineContent": [
                            {
                              "type": "text",
                              "text": "Select the CoreDataCloudKitDemo project"
                            }
                          ]
                        },
                        {
                          "type": "unorderedList",
                          "items": [
                            {
                              "content": [
                                {
                                  "type": "paragraph",
                                  "inlineContent": [
                                    {
                                      "type": "text",
                                      "text": "Select the Signing & Capabilities tab."
                                    }
                                  ]
                                }
                              ]
                            },
                            {
                              "content": [
                                {
                                  "type": "paragraph",
                                  "inlineContent": [
                                    {
                                      "type": "text",
                                      "text": "Select your development team from the dropdown list."
                                    }
                                  ]
                                }
                              ]
                            }
                          ]
                        }
                      ]
                    }
                  ]
                }
              ]
            },
            {
              "content": [
                {
                  "type": "paragraph",
                  "inlineContent": [
                    {
                      "type": "text",
                      "text": "Update the product bundle identifier for the test targets."
                    }
                  ]
                },
                {
                  "type": "unorderedList",
                  "items": [
                    {
                      "content": [
                        {
                          "type": "paragraph",
                          "inlineContent": [
                            {
                              "type": "text",
                              "text": "Select the CoreDataCloudKitDemoUnitTests target."
                            }
                          ]
                        },
                        {
                          "type": "unorderedList",
                          "items": [
                            {
                              "content": [
                                {
                                  "type": "paragraph",
                                  "inlineContent": [
                                    {
                                      "type": "text",
                                      "text": "Select the Signing & Capabilities tab."
                                    }
                                  ]
                                }
                              ]
                            },
                            {
                              "content": [
                                {
                                  "type": "paragraph",
                                  "inlineContent": [
                                    {
                                      "type": "text",
                                      "text": "Select your development team from the dropdown list."
                                    }
                                  ]
                                }
                              ]
                            },
                            {
                              "content": [
                                {
                                  "type": "paragraph",
                                  "inlineContent": [
                                    {
                                      "type": "text",
                                      "text": "Select the Build Settings Tab."
                                    }
                                  ]
                                }
                              ]
                            },
                            {
                              "content": [
                                {
                                  "type": "paragraph",
                                  "inlineContent": [
                                    {
                                      "type": "text",
                                      "text": "Find product bundle identifier and change it to a value appropriate for your team."
                                    }
                                  ]
                                }
                              ]
                            }
                          ]
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "level": 3,
          "type": "heading",
          "text": "Configuration Options",
          "anchor": "3878742"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "To facilitate testing the application supports the following configuration options parsed in to properties by the "
            },
            {
              "type": "codeVoice",
              "code": "AppDelegate"
            },
            {
              "type": "text",
              "text": " class:"
            }
          ]
        },
        {
          "type": "unorderedList",
          "items": [
            {
              "content": [
                {
                  "type": "paragraph",
                  "inlineContent": [
                    {
                      "type": "codeVoice",
                      "code": "-CDCKDTesting"
                    }
                  ]
                },
                {
                  "type": "unorderedList",
                  "items": [
                    {
                      "content": [
                        {
                          "type": "paragraph",
                          "inlineContent": [
                            {
                              "type": "text",
                              "text": "Set to "
                            },
                            {
                              "type": "codeVoice",
                              "code": "1"
                            },
                            {
                              "type": "text",
                              "text": " to store files in a special directory, "
                            },
                            {
                              "type": "codeVoice",
                              "code": "TestStores"
                            },
                            {
                              "type": "text",
                              "text": ", so that tests do not overwrite user data."
                            }
                          ]
                        }
                      ]
                    }
                  ]
                }
              ]
            },
            {
              "content": [
                {
                  "type": "paragraph",
                  "inlineContent": [
                    {
                      "type": "codeVoice",
                      "code": "-CDCKDAllowCloudKitSync"
                    }
                  ]
                },
                {
                  "type": "unorderedList",
                  "items": [
                    {
                      "content": [
                        {
                          "type": "paragraph",
                          "inlineContent": [
                            {
                              "type": "text",
                              "text": "Set to "
                            },
                            {
                              "type": "codeVoice",
                              "code": "0"
                            },
                            {
                              "type": "text",
                              "text": " to disable CloudKit sync during testing"
                            }
                          ]
                        }
                      ]
                    }
                  ]
                }
              ]
            },
            {
              "content": [
                {
                  "type": "paragraph",
                  "inlineContent": [
                    {
                      "type": "codeVoice",
                      "code": "com.apple.CoreData.ConcurrencyDebug"
                    }
                  ]
                },
                {
                  "type": "unorderedList",
                  "items": [
                    {
                      "content": [
                        {
                          "type": "paragraph",
                          "inlineContent": [
                            {
                              "type": "text",
                              "text": "Enables Core Data multi-threading assertions to verify the correct queue is used for all Core Data operations."
                            }
                          ]
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
