    {
      "kind": "content",
      "content": [
        {
          "anchor": "overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "The particles, defined by instances of "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/quartzcore/caemittercell"
            },
            {
              "type": "text",
              "text": ", are drawn above the layerâ€™s background color and border."
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/quartzcore/caemitterlayer#2776884"
            },
            {
              "type": "text",
              "text": " shows how to set up a simple point (the default "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/quartzcore/caemitterlayer/1521919-emittershape"
            },
            {
              "type": "text",
              "text": " is "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/quartzcore/kcaemitterlayerpoint"
            },
            {
              "type": "text",
              "text": ") particle emitter. It uses an image named "
            },
            {
              "type": "codeVoice",
              "code": "RadialGradient.png"
            },
            {
              "type": "text",
              "text": " as the cell contents and, by setting the emitter cell's "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/quartzcore/caemittercell/1521847-emissionrange"
            },
            {
              "type": "text",
              "text": " to "
            },
            {
              "type": "codeVoice",
              "code": "2 x"
            },
            {
              "type": "text",
              "text": " "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/coregraphics/cgfloat/1845230-pi"
            },
            {
              "type": "text",
              "text": ", the particles are emitted in all directions."
            }
          ]
        },
        {
          "type": "codeListing",
          "code": [
            "let emitterLayer = CAEmitterLayer()",
            "    ",
            "emitterLayer.emitterPosition = CGPoint(x: 320, y: 320)",
            "    ",
            "let cell = CAEmitterCell()",
            "cell.birthRate = 100",
            "cell.lifetime = 10",
            "cell.velocity = 100",
            "cell.scale = 0.1",
            "    ",
            "cell.emissionRange = CGFloat.pi * 2.0",
            "cell.contents = UIImage(named: \"RadialGradient.png\")!.cgImage",
            "    ",
            "emitterLayer.emitterCells = [cell]",
            "    ",
            "view.layer.addSublayer(emitterLayer)"
          ],
