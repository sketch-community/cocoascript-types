      "parameters": [
        {
          "name": "anim",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The animation to be added to the render tree. This object is copied by the render tree, not referenced. Therefore, subsequent modifications to the object are not propagated into the render tree."
                }
              ]
            }
          ]
        },
        {
          "name": "key",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "A string that identifies the animation. Only one animation per unique key is added to the layer. The special key "
                },
                {
                  "type": "reference",
                  "isActive": true,
                  "identifier": "doc://com.apple.documentation/documentation/quartzcore/kcatransition"
                },
                {
                  "type": "text",
                  "text": " is automatically used for transition animations. You may specify "
                },
                {
                  "type": "codeVoice",
                  "code": "nil"
                },
                {
                  "type": "text",
                  "text": " for this parameter."
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "kind": "content",
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "If the "
            },
            {
              "type": "codeVoice",
              "code": "duration"
            },
            {
              "type": "text",
              "text": " property of the animation is zero or negative, the duration is changed to the current value of the "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/quartzcore/kcatransactionanimationduration"
            },
            {
              "type": "text",
              "text": " transaction property (if set) or to the default value of "
            },
            {
              "type": "codeVoice",
              "code": "0.25"
            },
            {
              "type": "text",
              "text": " seconds.  "
            }
          ]
        }
