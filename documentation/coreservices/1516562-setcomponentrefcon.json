          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The component whose reference constant you wish to set. You can use a component instance here, but you must coerce the data type appropriately. "
                }
              ]
            }
          ]
        },
        {
          "name": "theRefcon",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The reference constant value that you want to set for your component. Your component can retrieve the reference constant using the "
                },
                {
                  "type": "reference",
                  "isActive": true,
                  "identifier": "doc://com.apple.documentation/documentation/coreservices/1516331-getcomponentrefcon"
                },
                {
                  "type": "text",
                  "text": " function. "
                }
              ]
