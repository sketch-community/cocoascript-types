      "parameters": [
        {
          "name": "theAEDesc",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "A pointer to the descriptor to be flattened. See "
                },
                {
                  "type": "reference",
                  "isActive": true,
                  "identifier": "doc://com.apple.documentation/documentation/coreservices/aedesc"
                },
                {
                  "type": "text",
                  "text": "."
                }
              ]
            }
          ]
        },
        {
          "name": "buffer",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "A pointer to memory, allocated by the application, where the flattened data will be stored. See the "
                },
                {
                  "type": "codeVoice",
                  "code": "bufferSize"
                },
                {
                  "type": "text",
                  "text": " parameter for information on how large a buffer you should allocate."
                }
              ]
            }
          ]
        },
        {
          "name": "bufferSize",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The size of the buffer pointed to by buffer. Prior to calling "
                },
                {
                  "type": "codeVoice",
                  "code": "AEFlattenDesc"
                },
                {
                  "type": "text",
                  "text": ", you call the "
                },
                {
                  "type": "reference",
                  "isActive": true,
                  "identifier": "doc://com.apple.documentation/documentation/coreservices/1447305-aesizeofflatteneddesc"
                },
                {
                  "type": "text",
                  "text": " function to determine the required size of the buffer for the flatten operation."
                }
              ]
            },
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "If "
                },
                {
                  "type": "codeVoice",
                  "code": "bufferSize"
                },
                {
                  "type": "text",
                  "text": " is too small, "
                },
                {
                  "type": "codeVoice",
                  "code": "AEFlattenDesc"
                },
                {
                  "type": "text",
                  "text": " returns "
                },
                {
                  "type": "codeVoice",
                  "code": "errAEBufferTooSmall"
                },
                {
                  "type": "text",
                  "text": " and doesn’t store any data in the buffer."
                }
              ]
            }
          ]
        },
        {
          "name": "actualSize",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "A pointer to a size variable. On return, the variable contains the actual size of the flattened data. You can specify "
                },
                {
                  "type": "codeVoice",
                  "code": "NULL"
                },
                {
                  "type": "text",
                  "text": " for this parameter if you do not care about the returned size."
                }
              ]
            }
          ]
        }
      ]
    },
