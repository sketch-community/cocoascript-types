      ],
      "parameters": [
        {
          "name": "timerID",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The ID of the timer whose notification information you want to set. "
                }
              ]
            }
          ]
        },
        {
          "name": "notificationID",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The ID of the notification mechanism to associate with the timer. This value should be the ID of an event group, a message queue, or a semaphore. "
                }
              ]
            }
          ]
        },
        {
          "name": "notifyParam1",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "If "
                },
                {
                  "type": "codeVoice",
                  "code": "anID"
                },
                {
                  "type": "text",
                  "text": " specifies an event group, this parameter should contain the flags to set in the event group when the timer expires. If "
                },
                {
                  "type": "codeVoice",
                  "code": "anID"
                },
                {
                  "type": "text",
                  "text": " specifies a message queue, this parameter should contain the first pointer-sized value of the message to be sent to the message queue when the timer expires. "
                }
              ]
            }
          ]
        },
        {
          "name": "notifyParam2",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "If "
                },
                {
                  "type": "codeVoice",
                  "code": "anID"
                },
                {
                  "type": "text",
                  "text": " specifies a message queue, this parameter should contain the second pointer-sized value of the message to be sent to the message queue when the timer expires. Pass "
                },
                {
                  "type": "codeVoice",
                  "code": "NULL"
                },
                {
                  "type": "text",
                  "text": " if you don’t need this parameter."
                }
              ]
            }
          ]
        },
        {
          "name": "notifyParam3",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "If "
                },
                {
                  "type": "codeVoice",
                  "code": "anID"
                },
                {
                  "type": "text",
                  "text": " specifies a message queue, this parameter should contain the third pointer-sized value of the message sent to the message queue when the timer expires. Pass "
                },
                {
                  "type": "codeVoice",
                  "code": "NULL"
                },
                {
                  "type": "text",
                  "text": " if you don’t need this parameter."
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "kind": "content",
      "content": [
        {
          "anchor": "return_value",
          "level": 2,
          "text": "Return Value",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "A result code. See "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/coreservices/carbon_core/multiprocessing_services#1663965"
            },
            {
              "type": "text",
