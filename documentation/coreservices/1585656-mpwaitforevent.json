          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The event group whose flags you want to retrieve. "
                }
              ]
            }
          ]
        },
        {
          "name": "flags",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "On return, "
                },
                {
                  "type": "codeVoice",
                  "code": "flags"
                },
                {
                  "type": "text",
                  "text": " contains the flags of the specified event group. Pass "
                },
                {
                  "type": "codeVoice",
                  "code": "NULL"
                },
                {
                  "type": "text",
                  "text": " if you do not need any flag information. "
                }
              ]
            }
          ]
        },
        {
          "name": "timeout",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The maximum time to wait for events before timing out. See "
                },
                {
                  "type": "reference",
                  "isActive": true,
                  "identifier": "doc://com.apple.documentation/documentation/coreservices/1585641-timer_duration_constants"
                },
                {
                  "type": "text",
                  "text": " for a list of constants you can use to specify the wait interval. "
                }
              ]
            }
          ]
        }
      ]
    },
