        {
          "name": "seconds",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The desired number of seconds to reserve the fade hardware. An application can specify any value in the interval "
                },
                {
                  "type": "codeVoice",
                  "code": "(0, kCGMaxDisplayReservationInterval]"
                },
                {
                  "type": "text",
                  "text": "."
                }
              ]
            }
          ]
        },
        {
          "name": "pNewToken",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "A pointer to storage (provided by the caller) for a fade reservation token. On return, the storage contains a new token."
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "kind": "content",
      "content": [
        {
          "anchor": "return_value",
          "level": 2,
          "text": "Return Value",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "Returns "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/coregraphics/cgerror/kcgerrornoneavailable"
            },
            {
              "type": "text",
              "text": " if another fade reservation is in effect. Otherwise, returns "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/coregraphics/cgerror/kcgerrorsuccess"
            },
            {
