      "parameters": [
        {
          "name": "image",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The image from which to extract the subimage."
                }
              ]
            }
          ]
        },
        {
          "name": "rect",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "A rectangle specifying the portion of the image to keep."
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "kind": "content",
      "content": [
        {
          "anchor": "return_value",
          "level": 2,
          "text": "Return Value",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "A "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/coregraphics/cgimageref"
            },
            {
              "type": "text",
              "text": " object that specifies a subimage of the image. If the "
            },
            {
              "type": "codeVoice",
              "code": "rect"
            },
            {
              "type": "text",
              "text": " parameter defines an area that is not in the image, returns "
            },
            {
              "type": "codeVoice",
              "code": "NULL"
            },
            {
              "type": "text",
              "text": "."
            }
          ]
        }
      ]
    },
    {
      "kind": "content",
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "Cropping removes content around the designated rectangle; it cuts out the desired area of the input image and returns an image of the cropped size."
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "image",
              "identifier": "media-2951298",
              "metadata": {
                "anchor": "2951298",
                "title": "Figure 1",
                "abstract": [
                  {
                    "type": "text",
                    "text": "Cropping an image"
                  }
                ]
              }
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/coregraphics/1454683-cgimagecreatewithimageinrect"
            },
            {
              "type": "text",
              "text": " performs the following tasks to create the subimage:"
            }
          ]
        },
        {
          "type": "unorderedList",
          "items": [
            {
              "content": [
                {
                  "type": "paragraph",
                  "inlineContent": [
                    {
                      "type": "text",
                      "text": "It calls the "
                    },
                    {
                      "type": "reference",
                      "isActive": true,
                      "identifier": "doc://com.apple.documentation/documentation/coregraphics/1456348-cgrectintegral"
                    },
                    {
                      "type": "text",
                      "text": " function to adjust the "
                    },
                    {
                      "type": "codeVoice",
                      "code": "rect"
                    },
                    {
                      "type": "text",
                      "text": " parameter to integral bounds."
                    }
                  ]
                }
              ]
            },
            {
              "content": [
                {
                  "type": "paragraph",
                  "inlineContent": [
                    {
                      "type": "text",
                      "text": "It intersects the "
                    },
                    {
                      "type": "codeVoice",
                      "code": "rect"
                    },
                    {
                      "type": "text",
                      "text": " with a rectangle whose origin is "
                    },
                    {
                      "type": "codeVoice",
                      "code": "(0,0)"
                    },
                    {
                      "type": "text",
                      "text": " and size is equal to the size of the image specified by the "
                    },
                    {
                      "type": "codeVoice",
                      "code": "image"
                    },
                    {
                      "type": "text",
                      "text": " parameter."
                    }
                  ]
                }
              ]
            },
            {
              "content": [
                {
                  "type": "paragraph",
                  "inlineContent": [
                    {
                      "type": "text",
                      "text": "It reads the pixels within the resulting rectangle, treating the first pixel within as the origin of the subimage."
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "If "
            },
            {
              "type": "codeVoice",
              "code": "W"
            },
            {
              "type": "text",
              "text": " and "
            },
            {
              "type": "codeVoice",
              "code": "H"
            },
            {
              "type": "text",
              "text": " are the width and height of image, respectively, then the point "
            },
            {
              "type": "codeVoice",
              "code": "(0,0)"
            },
            {
              "type": "text",
              "text": " corresponds to the first pixel of the image data. The point "
            },
            {
              "type": "codeVoice",
              "code": "(W–1, 0)"
            },
            {
              "type": "text",
              "text": " is the last pixel of the first row of the image data, while "
            },
            {
              "type": "codeVoice",
              "code": "(0, H–1)"
            },
            {
              "type": "text",
              "text": " is the first pixel of the last row of the image data and "
            },
            {
              "type": "codeVoice",
              "code": "(W–1, H–1)"
            },
            {
              "type": "text",
              "text": " is the last pixel of the last row of the image data."
            }
          ]
        },
        {
          "type": "aside",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "Be sure to specify the subrectangle's coordinates relative to the original image's full size, even if the "
                },
                {
                  "type": "reference",
                  "isActive": true,
                  "identifier": "doc://com.apple.documentation/documentation/uikit/uiimageview"
                },
                {
                  "type": "text",
                  "text": " shows only a scaled version."
                }
              ]
            }
          ],
          "style": "important"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "The resulting image retains a reference to the original image, which means you may release the original image after calling this function.  In Swift, you do not need to release the original image reference explicitly."
            }
          ]
        },
        {
          "type": "codeListing",
          "code": [
            "- (UIImage*) cropImage:(UIImage*)inputImage",
            "                toRect:(CGRect)cropRect",
            "             viewWidth:(CGFloat)viewWidth",
            "            viewHeight:(CGFloat)viewHeight",
            "{",
            "    // viewWidth, viewHeight are dimensions of imageView",
            "    const CGFloat imageViewScale = MAX(inputImage.size.width/_viewWidth, inputImage.size.height/_viewHeight);",
            "",
            "    // Scale cropRect to handle images larger than shown-on-screen size",
            "    cropRect.origin.x *= imageViewScale;",
            "    cropRect.origin.y *= imageViewScale;",
            "    cropRect.size.width *= imageViewScale;",
            "    cropRect.size.height *= imageViewScale;",
            "    ",
            "    // Perform cropping in Core Graphics",
            "    CGImageRef cutImageRef = CGImageCreateWithImageInRect(inputImage.CGImage, cropRect);",
            "    ",
            "    // Convert back to UIImage",
            "    UIImage* croppedImage = [UIImage imageWithCGImage:cutImageRef];",
            "    ",
            "    // Clean up reference pointers",
            "    CGImageRelease(cutImageRef);",
            "    ",
            "    return croppedImage;",
            "}"
          ],
          "syntax": "swift",
          "metadata": {
            "anchor": "2951210",
            "title": "Listing 1",
            "abstract": [
              {
                "type": "text",
                "text": "Cropping an image using "
              },
              {
                "type": "codeVoice",
                "code": "CGImageCreateWithImageInRect"
              }
            ]
          }
        },
        {
          "type": "paragraph",
          "inlineContent": []
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "If you already use "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/coreimage/ciimage"
            },
            {
              "type": "text",
              "text": ", or if you are post-processing images as "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/coreimage/ciimage"
            },
            {
              "type": "text",
              "text": " data in Core Image, such as chaining together multiple filters to the cropped result, it may be more efficient to crop "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/coreimage/ciimage"
            },
            {
              "type": "text",
              "text": " directly in the Core Image framework using the "
            },
            {
              "type": "codeVoice",
              "code": "CICrop"
            },
            {
              "type": "text",
              "text": " filter; in this case, use the convenience function "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/coreimage/ciimage/1437833-imagebycroppingtorect"
            },
            {
              "type": "text",
              "text": "."
            }
          ]
        }
      ]
    }
