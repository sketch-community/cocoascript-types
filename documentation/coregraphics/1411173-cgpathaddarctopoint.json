        {
          "name": "path",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The mutable path to change. The path must not be empty."
                }
              ]
            }
          ]
        },
        {
          "name": "m",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "A pointer to an affine transformation matrix, or "
                },
                {
                  "type": "codeVoice",
                  "code": "NULL"
                },
                {
                  "type": "text",
                  "text": " if no transformation is needed. If specified, Core Graphics applies the transformation to the arc before it is added to the path."
                }
              ]
            }
          ]
        },
        {
          "name": "x1",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The x-coordinate of the user space for the end point of the first tangent line. The first tangent line is drawn from the current point to "
                },
                {
                  "type": "codeVoice",
                  "code": "(x1,y1)"
                },
                {
                  "type": "text",
                  "text": "."
                }
              ]
            }
          ]
        },
        {
          "name": "y1",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The y-coordinate of the user space for the end point of the first tangent line. The first tangent line is drawn from the current point to "
                },
                {
                  "type": "codeVoice",
                  "code": "(x1,y1)"
                },
                {
                  "type": "text",
                  "text": "."
                }
              ]
            }
          ]
        },
        {
          "name": "x2",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The x-coordinate of the user space for the end point of the second tangent line. The second tangent line is drawn from "
                },
                {
                  "type": "codeVoice",
                  "code": "(x1,y1)"
                },
                {
                  "type": "text",
                  "text": " to "
                },
                {
                  "type": "codeVoice",
                  "code": "(x2,y2)"
                },
                {
                  "type": "text",
                  "text": "."
                }
              ]
            }
          ]
        },
        {
          "name": "y2",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The y-coordinate of the user space for the end point of the second tangent line. The second tangent line is drawn from "
                },
                {
                  "type": "codeVoice",
                  "code": "(x1,y1)"
                },
                {
                  "type": "text",
                  "text": " to "
                },
                {
                  "type": "codeVoice",
                  "code": "(x2,y2)"
                },
                {
                  "type": "text",
                  "text": "."
                }
              ]
            }
          ]
        },
        {
          "name": "radius",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The radius of the arc, in user space coordinates."
                }
