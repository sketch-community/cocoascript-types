        {
          "name": "seconds",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The time step to use for any time-dependent actions performed by this method (typically, the elapsed time since the previous call to this method)."
                }
              ]
            }
          ]
        }
