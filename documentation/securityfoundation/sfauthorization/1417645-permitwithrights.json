      "parameters": [
        {
          "name": "rights",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "A pointer to a set of authorization rights you create. Pass "
                },
                {
                  "type": "codeVoice",
                  "code": "NULL"
                },
                {
                  "type": "text",
                  "text": " if the application requires no rights at this time. "
                }
              ]
            }
          ]
        },
        {
          "name": "flags",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "A bit mask for specifying authorization options. Use the following option sets:"
                }
              ]
            },
            {
              "type": "unorderedList",
              "items": [
                {
                  "content": [
                    {
                      "type": "paragraph",
                      "inlineContent": [
                        {
                          "type": "text",
                          "text": "Pass the constant "
                        },
                        {
                          "type": "reference",
                          "isActive": true,
                          "identifier": "doc://com.apple.documentation/documentation/security/authorizationflags/kauthorizationflagdefaults"
                        },
                        {
                          "type": "text",
                          "text": " if no options are necessary."
                        }
                      ]
                    }
                  ]
                },
                {
                  "content": [
                    {
                      "type": "paragraph",
                      "inlineContent": [
                        {
                          "type": "text",
                          "text": "Specify the "
                        },
                        {
                          "type": "reference",
                          "isActive": true,
                          "identifier": "doc://com.apple.documentation/documentation/security/authorizationflags/kauthorizationflagextendrights"
                        },
                        {
                          "type": "text",
                          "text": " mask to request rights. You can also specify the "
                        },
                        {
                          "type": "reference",
                          "isActive": true,
                          "identifier": "doc://com.apple.documentation/documentation/security/authorizationflags/kauthorizationflaginteractionallowed"
                        },
                        {
                          "type": "text",
                          "text": " mask to allow user interaction."
                        }
                      ]
                    }
                  ]
                },
                {
                  "content": [
                    {
                      "type": "paragraph",
                      "inlineContent": [
                        {
                          "type": "text",
                          "text": "Specify the "
                        },
                        {
                          "type": "reference",
                          "isActive": true,
                          "identifier": "doc://com.apple.documentation/documentation/security/authorizationflags/kauthorizationflagpartialrights"
                        },
                        {
                          "type": "text",
                          "text": " and "
                        },
                        {
                          "type": "reference",
                          "isActive": false,
                          "identifier": "doc://com.apple.documentation/documentation/security/authorizationflags/kauthorizationflagextendrights"
                        },
                        {
                          "type": "text",
                          "text": " masks to request partial rights. You can also specify the "
                        },
                        {
                          "type": "reference",
                          "isActive": false,
                          "identifier": "doc://com.apple.documentation/documentation/security/authorizationflags/kauthorizationflaginteractionallowed"
                        },
                        {
                          "type": "text",
                          "text": " mask to allow user interaction."
                        }
                      ]
                    }
                  ]
                },
                {
                  "content": [
                    {
                      "type": "paragraph",
                      "inlineContent": [
                        {
                          "type": "text",
                          "text": "Specify the "
                        },
                        {
                          "type": "reference",
                          "isActive": true,
                          "identifier": "doc://com.apple.documentation/documentation/security/authorizationflags/kauthorizationflagpreauthorize"
                        },
                        {
                          "type": "text",
                          "text": " and "
                        },
                        {
                          "type": "reference",
                          "isActive": false,
                          "identifier": "doc://com.apple.documentation/documentation/security/authorizationflags/kauthorizationflagextendrights"
                        },
                        {
                          "type": "text",
                          "text": " masks to preauthorize rights."
                        }
                      ]
                    }
                  ]
                },
                {
                  "content": [
                    {
                      "type": "paragraph",
                      "inlineContent": [
                        {
                          "type": "text",
                          "text": "Specify the "
                        },
                        {
                          "type": "reference",
                          "isActive": true,
                          "identifier": "doc://com.apple.documentation/documentation/security/authorizationflags/kauthorizationflagdestroyrights"
                        },
                        {
                          "type": "text",
                          "text": " mask to prevent the Security framework from preserving the rights obtained during this call."
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "name": "environment",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "Data used when authorizing or preauthorizing rights. In macOS 10.3 and later, you can pass icon or prompt data to be used in the authentication dialog box. Possible values for this parameter are listed in "
                },
                {
                  "type": "codeVoice",
                  "code": "Security/AuthorizationTags.h"
                },
                {
                  "type": "text",
                  "text": ". If you are not passing any data in this parameter, pass the constant "
                },
                {
                  "type": "reference",
                  "isActive": true,
                  "identifier": "doc://com.apple.documentation/documentation/security/kauthorizationemptyenvironment"
                },
                {
                  "type": "text",
                  "text": "."
                }
              ]
            }
          ]
        },
        {
          "name": "authorizedRights",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "A pointer to a newly allocated "
                },
                {
                  "type": "reference",
                  "isActive": true,
                  "identifier": "doc://com.apple.documentation/documentation/security/authorizationrights"
                },
                {
                  "type": "text",
                  "text": " structure. On return, this structure contains the rights granted by the Security framework. If you do not require this information, pass "
                },
                {
                  "type": "codeVoice",
                  "code": "NULL"
                },
                {
                  "type": "text",
                  "text": ". If you specify the "
                },
                {
                  "type": "reference",
                  "isActive": true,
                  "identifier": "doc://com.apple.documentation/documentation/security/authorizationflags/kauthorizationflagpreauthorize"
                },
                {
                  "type": "text",
                  "text": " mask in the "
                },
                {
                  "type": "codeVoice",
                  "code": "flags"
                },
                {
                  "type": "text",
                  "text": " parameter, the method returns all the requested rights, including those not granted, but the flags of the rights that could not be preauthorized include the "
                },
                {
                  "type": "reference",
                  "isActive": true,
                  "identifier": "doc://com.apple.documentation/documentation/security/1540009-authorization_rights_flags/kauthorizationflagcannotpreauthorize"
                },
                {
                  "type": "text",
                  "text": " bit."
                }
              ]
            },
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "Free the memory associated with this set of rights by calling the Authorization Services function "
                },
                {
                  "type": "reference",
                  "isActive": true,
                  "identifier": "doc://com.apple.documentation/documentation/security/1392929-authorizationfreeitemset"
                },
                {
                  "type": "text",
                  "text": ". "
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "kind": "content",
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "There are three main reasons to use this method. The first reason is to preauthorize rights by specifying the "
            },
            {
              "type": "reference",
              "isActive": false,
              "identifier": "doc://com.apple.documentation/documentation/security/authorizationflags/kauthorizationflagpreauthorize"
            },
            {
              "type": "text",
              "text": ", "
            },
            {
              "type": "reference",
              "isActive": false,
              "identifier": "doc://com.apple.documentation/documentation/security/authorizationflags/kauthorizationflaginteractionallowed"
            },
            {
              "type": "text",
              "text": ", and "
            },
            {
              "type": "reference",
              "isActive": false,
              "identifier": "doc://com.apple.documentation/documentation/security/authorizationflags/kauthorizationflagextendrights"
            },
            {
              "type": "text",
              "text": " masks as authorization options. Preauthorization is most useful when a right has a zero timeout. For example, you can preauthorize in the application and if it succeeds, call the helper tool and request authorization. This eliminates calling the helper tool if the Security framework cannot later authorize the specified rights."
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "The second reason to use this method is to authorize rights before performing a privileged operation by specifying the "
            },
            {
              "type": "reference",
              "isActive": false,
              "identifier": "doc://com.apple.documentation/documentation/security/authorizationflags/kauthorizationflaginteractionallowed"
            },
            {
              "type": "text",
              "text": ", and "
            },
            {
              "type": "reference",
              "isActive": false,
              "identifier": "doc://com.apple.documentation/documentation/security/authorizationflags/kauthorizationflagextendrights"
            },
            {
              "type": "text",
              "text": " masks as authorization options."
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "The third reason to use this method is to authorize partial rights. By specifying the "
            },
            {
              "type": "reference",
              "isActive": false,
              "identifier": "doc://com.apple.documentation/documentation/security/authorizationflags/kauthorizationflagpartialrights"
            },
            {
              "type": "text",
              "text": ", "
            },
            {
              "type": "reference",
              "isActive": false,
              "identifier": "doc://com.apple.documentation/documentation/security/authorizationflags/kauthorizationflaginteractionallowed"
            },
            {
              "type": "text",
              "text": ", and "
            },
            {
              "type": "reference",
              "isActive": false,
              "identifier": "doc://com.apple.documentation/documentation/security/authorizationflags/kauthorizationflagextendrights"
            },
            {
              "type": "text",
              "text": " masks as authorization options, the Security framework grants all rights it can authorize. On return, the authorized set contains all the rights."
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "If you do not specify the "
            },
            {
              "type": "reference",
              "isActive": false,
              "identifier": "doc://com.apple.documentation/documentation/security/authorizationflags/kauthorizationflagpartialrights"
            },
            {
              "type": "text",
              "text": " mask and the Security framework denies at least one right, then the status of this method on return is "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/security/1540004-authorization_services_result_co/errauthorizationdenied"
            },
            {
              "type": "text",
              "text": "."
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "If you do not specify the "
            },
            {
              "type": "reference",
              "isActive": false,
              "identifier": "doc://com.apple.documentation/documentation/security/authorizationflags/kauthorizationflaginteractionallowed"
            },
            {
              "type": "text",
              "text": " mask and the Security framework requires user interaction, then the status of this method on return is "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/security/1540004-authorization_services_result_co/errauthorizationinteractionnotallowed"
            },
            {
              "type": "text",
              "text": "."
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "If you specify the "
            },
            {
              "type": "reference",
              "isActive": false,
              "identifier": "doc://com.apple.documentation/documentation/security/authorizationflags/kauthorizationflaginteractionallowed"
            },
            {
              "type": "text",
              "text": " mask and the user cancels the authentication process, then the status of this method on return is "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/security/1540004-authorization_services_result_co/errauthorizationcanceled"
            },
            {
              "type": "text",
              "text": "."
            }
          ]
        },
        {
          "level": 3,
          "type": "heading",
          "text": "Special Considerations",
          "anchor": "1678572"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "The "
            },
            {
              "type": "codeVoice",
              "code": "authorizedRights"
            },
            {
              "type": "text",
              "text": " parameter is not supported in OS X v10.3; use the Authorization Services function "
            },
            {
              "type": "codeVoice",
              "code": "AuthorizationCopyRights"
            },
            {
              "type": "text",
              "text": " instead. In OS X v10.3 there is an error in the signature in the header file for this parameter. If you pass this argument as (AuthorizationRights **)"
            },
            {
              "type": "codeVoice",
              "code": "authorizedRights"
            },
            {
              "type": "text",
              "text": ", as shown in this document, it works as described."
            }
          ]
        }
      ]
    }
