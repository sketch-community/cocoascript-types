          "name": "keyPath",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The key path, relative to the object receiving this message, of the property to observe. This value must not be "
                },
                {
                  "type": "codeVoice",
                  "code": "nil"
                },
                {
                  "type": "text",
                  "text": "."
                }
              ]
            }
          ]
        },
        {
          "name": "options",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "A combination of the "
                },
                {
                  "type": "codeVoice",
                  "code": "NSKeyValueObservingOptions"
                },
                {
                  "type": "text",
                  "text": " values that specifies what is included in observation notifications. For possible values, see "
                },
                {
                  "type": "reference",
                  "isActive": true,
                  "identifier": "doc://com.apple.documentation/documentation/foundation/nskeyvalueobservingoptions"
                },
                {
                  "type": "text",
                  "text": "."
                }
              ]
            }
          ]
        },
