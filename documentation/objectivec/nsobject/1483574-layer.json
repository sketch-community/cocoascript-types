        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "A Boolean value that specifies whether to change the layerâ€™s "
            },
            {
              "type": "codeVoice",
              "code": "contentsScale"
            },
            {
              "type": "text",
              "text": " property. "
            }
          ]
