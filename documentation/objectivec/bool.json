    {
      "kind": "content",
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "codeVoice",
              "code": "BOOL"
            },
            {
              "type": "text",
              "text": " is explicitly signed so "
            },
            {
              "type": "codeVoice",
              "code": "@encode(BOOL)"
            },
            {
              "type": "text",
              "text": " is "
            },
            {
              "type": "codeVoice",
              "code": "c"
            },
            {
              "type": "text",
              "text": " rather than "
            },
            {
              "type": "codeVoice",
              "code": "C"
            },
            {
              "type": "text",
              "text": " even if "
            },
            {
              "type": "codeVoice",
              "code": "-funsigned-char"
            },
            {
              "type": "text",
              "text": " is used."
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "For values, see "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/objectivec/objective-c_runtime/boolean_values"
            },
            {
              "type": "text",
              "text": "."
            }
          ]
        },
        {
          "level": 3,
          "type": "heading",
          "text": "Special Considerations",
          "anchor": "1817698"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "Since the type of "
            },
            {
              "type": "codeVoice",
              "code": "BOOL"
            },
            {
              "type": "text",
              "text": " is actually "
            },
            {
              "type": "codeVoice",
              "code": "char"
            },
            {
              "type": "text",
              "text": ", it does not behave in the same way as a C "
            },
            {
              "type": "codeVoice",
              "code": "_Bool"
            },
            {
              "type": "text",
              "text": " value or a C++ "
            },
            {
              "type": "emphasis",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "bool"
                }
              ]
            },
            {
              "type": "text",
              "text": " value. For example, the conditional in the following code will be false on i386 (and true on PPC):"
            }
          ]
        },
        {
          "type": "codeListing",
          "code": [
            "- (BOOL)value {",
            "    return 256;",
            "}",
            "// then",
            "if ([self value]) doStuff();"
          ],
          "syntax": "occ",
          "metadata": {
            "anchor": "2557073",
            "title": "Listing 1"
          }
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "By contrast, the conditional in the following code will be true on all platforms (even where "
            },
            {
              "type": "codeVoice",
              "code": "sizeof(bool) == 1"
            },
            {
              "type": "text",
              "text": "):"
            }
          ]
        },
        {
          "type": "codeListing",
          "code": [
            "- (bool)value {",
            "    return 256;",
            "}",
            "// then",
            "if ([self value]) doStuff();"
          ],
          "syntax": "occ",
          "metadata": {
            "anchor": "2557074",
            "title": "Listing 2"
          }
        }
      ]
    }
