    {
      "kind": "content",
      "content": [
        {
          "anchor": "overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "When using an authorization item to contain a right, set the "
            },
            {
              "type": "codeVoice",
              "code": "name"
            },
            {
              "type": "text",
              "text": " field to the name of the right—for example, "
            },
            {
              "type": "codeVoice",
              "code": "\"com.myOrganization.myProduct.myRight\""
            },
            {
              "type": "text",
              "text": ", the "
            },
            {
              "type": "codeVoice",
              "code": "valueLength"
            },
            {
              "type": "text",
              "text": " and "
            },
            {
              "type": "codeVoice",
              "code": "flags"
            },
            {
              "type": "text",
              "text": " fields to "
            },
            {
              "type": "codeVoice",
              "code": "0"
            },
            {
              "type": "text",
              "text": ", and the "
            },
            {
              "type": "codeVoice",
              "code": "value"
            },
            {
              "type": "text",
              "text": " field to "
            },
            {
              "type": "codeVoice",
              "code": "NULL"
            },
            {
              "type": "text",
              "text": ". For more information on naming rights, read "
            },
            {
              "type": "link",
              "title": "Authorization Services Programming Guide",
              "destination": "https://developer.apple.com/library/archive/documentation/Security/Conceptual/authorization_concepts/01introduction/introduction.html#//apple_ref/doc/uid/TP30000995"
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "When using an authorization item for the "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/security/1540038-authorizationexecutewithprivileg"
            },
            {
              "type": "text",
              "text": " function, set the "
            },
            {
              "type": "codeVoice",
              "code": "name"
            },
            {
              "type": "text",
              "text": " field to "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/security/kauthorizationrightexecute"
            },
            {
              "type": "text",
              "text": ", and the "
            },
            {
              "type": "codeVoice",
              "code": "flags"
            },
            {
              "type": "text",
              "text": " field to "
            },
            {
              "type": "codeVoice",
              "code": "0"
            },
            {
              "type": "text",
              "text": ". Set the "
            },
            {
              "type": "codeVoice",
              "code": "value"
            },
            {
              "type": "text",
              "text": " field to the full POSIX pathname of the tool to execute and the "
            },
            {
              "type": "codeVoice",
              "code": "valueLength"
            },
            {
              "type": "text",
              "text": " field to the byte length of the value in the "
            },
            {
              "type": "codeVoice",
              "code": "value"
            },
            {
              "type": "text",
              "text": " field."
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "When using an authorization item to contain environment data, set the "
            },
            {
              "type": "codeVoice",
              "code": "name"
            },
            {
              "type": "text",
              "text": " field to the name of the environment data—for example, "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/security/kauthorizationenvironmentusername"
            },
            {
              "type": "text",
              "text": "—and the "
            },
            {
              "type": "codeVoice",
              "code": "flags"
            },
            {
              "type": "text",
              "text": " field to "
            },
            {
              "type": "codeVoice",
              "code": "0"
            },
            {
              "type": "text",
              "text": ". Set the "
            },
            {
              "type": "codeVoice",
              "code": "value"
            },
            {
              "type": "text",
              "text": " field, in this case, to the actual user name and the "
            },
            {
              "type": "codeVoice",
              "code": "valueLength"
            },
            {
              "type": "text",
              "text": " field to the byte length of the value in the "
            },
            {
              "type": "codeVoice",
              "code": "value"
            },
            {
              "type": "text",
              "text": " field."
            }
          ]
        }
      ]
    }
