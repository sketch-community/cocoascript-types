  "deprecationSummary": [
    {
      "type": "paragraph",
      "inlineContent": [
        {
          "type": "text",
          "text": "To ignore unknown root certificate errors, first disable Secure Transport's automatic verification of peer certificates by calling "
        }
      ]
    },
    {
      "type": "paragraph",
      "inlineContent": [
        {
          "type": "reference",
          "isActive": true,
          "identifier": "doc://com.apple.documentation/documentation/security/1399173-sslsetsessionoption"
        },
        {
          "type": "text",
          "text": " to set "
        },
        {
          "type": "reference",
          "isActive": true,
          "identifier": "doc://com.apple.documentation/documentation/security/sslsessionoption/ksslsessionoptionbreakonserverauth"
        },
        {
          "type": "text",
          "text": " to "
        },
        {
          "type": "reference",
          "isActive": false,
          "identifier": "doc://com.apple.documentation/documentation/objectivec/yes"
        },
        {
          "type": "text",
          "text": ". When "
        },
        {
          "type": "reference",
          "isActive": true,
          "identifier": "doc://com.apple.documentation/documentation/security/1400161-sslhandshake"
        },
        {
          "type": "text",
          "text": " subsequently returns an "
        },
        {
          "type": "codeVoice",
          "code": "errSSLServerAuthCompleted"
        },
        {
          "type": "text",
          "text": " result, obtain the "
        },
        {
          "type": "reference",
          "isActive": true,
          "identifier": "doc://com.apple.documentation/documentation/security/sectrustref"
        },
        {
          "type": "text",
          "text": " for the peer's certificates and perform a custom trust evaluation with "
        },
        {
          "type": "reference",
          "isActive": true,
          "identifier": "doc://com.apple.documentation/documentation/security/sectrustref"
        },
        {
          "type": "text",
          "text": " APIs (see the "
        },
        {
          "type": "reference",
          "isActive": true,
          "identifier": "doc://com.apple.documentation/documentation/security/certificate_key_and_trust_services/trust"
        },
        {
          "type": "text",
          "text": " section of "
        },
        {
          "type": "reference",
          "isActive": true,
          "identifier": "doc://com.apple.documentation/documentation/security/certificate_key_and_trust_services"
        },
        {
          "type": "text",
          "text": ")."
        }
      ]
    },
    {
      "type": "paragraph",
      "inlineContent": [
        {
          "type": "text",
          "text": "Note that an unknown root certificate will cause "
        },
        {
          "type": "reference",
          "isActive": true,
          "identifier": "doc://com.apple.documentation/documentation/security/1394363-sectrustevaluate"
        },
        {
          "type": "text",
          "text": " to report "
        },
        {
          "type": "reference",
          "isActive": true,
          "identifier": "doc://com.apple.documentation/documentation/security/sectrustresulttype/ksectrustresultrecoverabletrustfailure"
        },
        {
          "type": "text",
          "text": " as the trust result."
        }
      ]
    }
  ],
