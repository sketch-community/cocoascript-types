          "name": "cmsEncoder",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The CMSEncoder reference returned by the "
                },
                {
                  "type": "codeVoice",
                  "code": "CMSEncoderCreate"
                },
                {
                  "type": "text",
                  "text": " function."
                }
              ]
            }
          ]
        },
        {
          "name": "content",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The content that you want to add to the message. The content must conform to the type set with the "
                },
                {
                  "type": "reference",
                  "isActive": false,
                  "identifier": "doc://com.apple.documentation/documentation/security/1387172-cmsencodersetencapsulatedcontent"
                },
                {
                  "type": "text",
                  "text": " function (or type "
                },
                {
                  "type": "codeVoice",
                  "code": "id-data"
                },
                {
                  "type": "text",
                  "text": " if that function has not been called). "
                }
              ]
            }
          ]
        },
        {
          "name": "contentLen",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The length of the content being added, in bytes."
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "kind": "content",
      "content": [
        {
          "anchor": "return_value",
          "level": 2,
          "text": "Return Value",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "A result code. See "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/security/1542001-security_framework_result_codes"
            },
            {
              "type": "text",
