              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "A Boolean flag representing whether the certificate expiration times are ignored. The default for this flag is "
                },
                {
                  "type": "codeVoice",
                  "code": "false"
                },
                {
                  "type": "text",
                  "text": ", meaning expired certificates result in an "
                },
                {
                  "type": "codeVoice",
                  "code": "errSSLCertExpired"
                },
                {
                  "type": "text",
                  "text": " result code."
                }
              ]
            }
          ]
