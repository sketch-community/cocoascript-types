      ],
      "parameters": [
        {
          "name": "allocator",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The allocator to use, or "
                },
                {
                  "type": "codeVoice",
                  "code": "NULL"
                },
                {
                  "type": "text",
                  "text": " for the default allocator. "
                }
              ]
            }
          ]
        },
        {
          "name": "size",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The number of bytes to allocate. If the value is "
                },
                {
                  "type": "codeVoice",
                  "code": "0"
                },
                {
                  "type": "text",
                  "text": " or less, the result is the same value."
                }
              ]
            }
          ]
        },
        {
          "name": "hint",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "A bitfield of type "
                },
                {
                  "type": "codeVoice",
                  "code": "CFOptionsFlags"
                },
                {
                  "type": "text",
                  "text": ". Pass flags to the allocator that suggest how memory is to be allocated. "
                },
                {
                  "type": "codeVoice",
                  "code": "0"
                },
                {
                  "type": "text",
                  "text": " indicates no hints. No hints are currently defined, only "
                },
                {
                  "type": "codeVoice",
                  "code": "0"
                },
                {
                  "type": "text",
                  "text": " should be passed for this argument."
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "kind": "content",
      "content": [
        {
          "anchor": "return_value",
          "level": 2,
          "text": "Return Value",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "The number of bytes likely to be allocated upon a specific request. "
            }
          ]
        }
      ]
    },
    {
      "kind": "content",
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "The return value depends on the allocator's internal allocation strategy, and will be equal to or larger than "
            },
            {
              "type": "codeVoice",
              "code": "size"
            },
            {
              "type": "text",
              "text": ". Calling this function may help you better match your memory allocation or reallocation strategy to that of the allocator. "
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "Note that the return value depends on the internal implementation of the allocator and the results may change from release to release or from platform to platform."
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "If no function callback is assigned to the "
            },
            {
              "type": "codeVoice",
              "code": "preferredSize"
            },
            {
              "type": "text",
              "text": " field of the allocator's context (see the "
            },
            {
              "type": "codeVoice",
              "code": "CFAllocatorContext"
            },
            {
              "type": "text",
              "text": " structure), then the value of "
            },
            {
              "type": "codeVoice",
              "code": "size"
            },
            {
              "type": "text",
              "text": " is returned. "
            }
          ]
        }
      ]
    }
