        {
          "name": "records",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "A "
                },
                {
                  "type": "reference",
                  "isActive": true,
                  "identifier": "doc://com.apple.documentation/documentation/cloudkitjs/cloudkit/record"
                },
                {
                  "type": "text",
                  "text": " dictionary representing the record to create or update, if you are updating a single record. If you are updating multiple records, this parameter is an array of "
                },
                {
                  "type": "reference",
                  "isActive": true,
                  "identifier": "doc://com.apple.documentation/documentation/cloudkitjs/cloudkit/record"
                },
                {
                  "type": "text",
                  "text": " dictionaries representing the records to create or update. Only the values of the fields in the dictionaries are set."
                }
              ]
            }
          ]
        },
        {
          "name": "options",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "A dictionary containing options for this operation. This parameter contains a single "
                },
                {
                  "type": "codeVoice",
                  "code": "desiredKeys"
                },
                {
                  "type": "text",
                  "text": " key that is an array of field names ("
                },
                {
                  "type": "codeVoice",
                  "code": "String"
                },
                {
                  "type": "text",
                  "text": " values). Only the fields specified in the array are set."
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "kind": "content",
