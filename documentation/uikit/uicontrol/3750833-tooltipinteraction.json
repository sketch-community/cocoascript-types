        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "When you set the "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/uikit/uicontrol/3750832-tooltip"
            },
            {
              "type": "text",
              "text": " property, the control creates a "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/uikit/uitooltipinteraction"
            },
            {
              "type": "text",
              "text": " object and assigns it to the "
            },
            {
              "type": "reference",
              "isActive": false,
              "identifier": "doc://com.apple.documentation/documentation/uikit/uicontrol/3750833-tooltipinteraction"
            },
            {
              "type": "text",
              "text": " property. "
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "If you want to change the text of the tooltip based the current state of your app or application logic, assign a "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/uikit/uitooltipinteractiondelegate"
            },
            {
              "type": "text",
              "text": " object to "
            },
            {
              "type": "reference",
              "isActive": false,
              "identifier": "doc://com.apple.documentation/documentation/uikit/uicontrol/3750833-tooltipinteraction"
            },
            {
              "type": "text",
              "text": "’s "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/uikit/uitooltipinteraction/3795598-delegate"
            },
            {
              "type": "text",
              "text": " property. For example, the following code listing sets the tooltip’s default text and delegate for a shopping cart button:"
            }
          ]
        },
        {
          "type": "codeListing",
          "code": [
            "lazy var shoppingCartButtonWithTooltip: UIButton = {",
            "    var configuration = UIButton.Configuration.filled()",
            "    configuration.title = \"Add to Cart\"",
            "    configuration.image = UIImage(systemName: \"cart\", variant: .circle)",
            "    configuration.imagePlacement = NSDirectionalRectEdge.leading",
            "    configuration.imagePadding = 4",
            "    ",
            "    let action = UIAction { [unowned self] _ in self.cartItemCount += 1 }",
            "    ",
            "    let button = UIButton(configuration: configuration, primaryAction: action)",
            "    button.toolTip = \"Click to add the item to your cart. Your cart is empty.\"",
            "    button.toolTipInteraction?.delegate = self",
            "    ",
            "    return button",
            "}()"
          ],
          "syntax": "swift",
          "metadata": {
            "anchor": "3864806",
            "title": "Listing 1"
          }
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "Then the delegate returns a tooltip configuration containing text that states the number of items in the shopping cart by implementing the "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/uikit/uitooltipinteractiondelegate/3858113-tooltipinteraction"
            },
            {
              "type": "text",
              "text": " method:"
            }
          ]
        },
        {
          "type": "codeListing",
          "code": [
            "func toolTipInteraction(_ interaction: UIToolTipInteraction, configurationAt point: CGPoint) -> UIToolTipConfiguration? {",
            "    ",
            "    let text: String",
            "    switch cartItemCount {",
            "    case 0:",
            "        text = \"Click to add the item to your cart. Your cart is empty.\"",
            "    case 1:",
            "        text = \"Click to add the item to your cart. Your cart contains \\(cartItemCount) item.\"",
            "    default:",
            "        text = \"Click to add the item to your cart. Your cart contains \\(cartItemCount) items.\"",
            "    }",
            "    ",
            "    return UIToolTipConfiguration(toolTip: text)",
            "}"
          ],
          "syntax": "swift",
          "metadata": {
            "anchor": "3865258",
            "title": "Listing 2"
          }
        },
        {
          "type": "paragraph",
          "inlineContent": []
        }
      ]
