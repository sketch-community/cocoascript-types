              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "A rectangle that defines the area that is to be the target of the menu commands. "
                }
              ]
            }
          ]
        },
        {
          "name": "targetView",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The view in which "
                },
                {
                  "type": "codeVoice",
                  "code": "targetRect"
                },
                {
                  "type": "text",
                  "text": " appears."
                }
              ]
            }
          ]
        }
