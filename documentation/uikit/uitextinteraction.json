    {
      "kind": "content",
      "content": [
        {
          "anchor": "overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "Use "
            },
            {
              "type": "reference",
              "isActive": false,
              "identifier": "doc://com.apple.documentation/documentation/uikit/uitextinteraction"
            },
            {
              "type": "text",
              "text": " to provide your custom text views the same text selection gestures and UI available in native text views like "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/uikit/uitextview"
            },
            {
              "type": "text",
              "text": " and "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/uikit/uitextfield"
            },
            {
              "type": "text",
              "text": ". When creating a text interaction, choose a mode that matches the state of the text, "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/uikit/uitextinteractionmode/uitextinteractionmodeeditable"
            },
            {
              "type": "text",
              "text": " or "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/uikit/uitextinteractionmode/uitextinteractionmodenoneditable"
            },
            {
              "type": "text",
              "text": ". Then set the "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/uikit/uitextinteraction/3255084-textinput"
            },
            {
              "type": "text",
              "text": " property to an object that conforms to "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/uikit/uitextinput"
            },
            {
              "type": "text",
              "text": ", and add the interaction to a view."
            }
          ]
        },
        {
          "type": "codeListing",
          "code": [
            "// Create a selection interaction for non-editable content.",
            "let selectionInteraction = UITextInteraction(for: .nonEditable)",
            "",
            "// Assign `textInput` to your view that implements the `UITextInput` protocol",
            "// to get more control over the selection behavior and the text input system.",
            "selectionInteraction.textInput = customTextView",
            "",
            "// Add the interaction to the view.",
            "customTextView.addInteraction(selectionInteraction)"
          ],
          "syntax": "swift",
          "metadata": {
            "anchor": "3374533",
            "title": "Listing 1",
            "abstract": [
              {
                "type": "text",
                "text": "Adding a non-editable text interaction to a custom text view"
              }
            ]
          }
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "If your custom text view supports editable and non-editable text, create two interactions—one for each mode—and add the interaction that matches the state of text to the view while removing the other interaction."
            }
          ]
        },
        {
          "type": "codeListing",
          "code": [
            "override func becomeFirstResponder() -> Bool {",
            "    let isFirstResponder = self.isFirstResponder",
            "    let result = super.becomeFirstResponder()",
            "    ",
            "    if isFirstResponder == false && self.isFirstResponder == true {",
            "        customTextView.removeInteraction(nonEditableTextInteraction)",
            "        customTextView.addInteraction(editableTextInteraction)",
            "    }",
            "    ",
            "    return result",
            "}",
            "",
            "override func resignFirstResponder() -> Bool {",
            "    let isFirstResponder = self.isFirstResponder",
            "    let result = super.resignFirstResponder()",
            "    ",
            "    if isFirstResponder == true && self.isFirstResponder == false {",
            "        customTextView.removeInteraction(editableTextInteraction)",
            "        customTextView.addInteraction(nonEditableTextInteraction)",
            "    }",
            "    ",
            "    return result",
            "}"
          ],
          "syntax": "swift",
          "metadata": {
            "anchor": "3374534",
            "title": "Listing 2",
            "abstract": [
              {
                "type": "text",
                "text": "Swapping an editable text interaction with a non-editable interaction on a custom text view"
              }
            ]
          }
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "If your app provides other gestures in the same view hierarchy, you can use the "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/uikit/uigesturerecognizer/1624203-requiregesturerecognizertofail"
            },
            {
              "type": "text",
              "text": " method to set up failure requirements between your app's gestures and the text interaction gestures listed in the "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/uikit/uitextinteraction/3255083-gesturesforfailurerequirements"
            },
            {
              "type": "text",
              "text": " property."
            }
          ]
        }
      ]
    }
