        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "The contents of a screen can be recorded, mirrored, sent over AirPlay, or otherwise cloned to another destination. UIKit sends this notification when the capture status of the screen changes. "
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "The object of the notification is the "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/uikit/uiscreen"
            },
            {
              "type": "text",
              "text": " object whose "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/uikit/uiscreen/2921651-captured"
            },
            {
              "type": "text",
              "text": " property changed. There is no "
            },
            {
              "type": "codeVoice",
              "code": "userInfo"
            },
            {
              "type": "text",
              "text": " dictionary. "
            }
          ]
        }
      ]
    }
