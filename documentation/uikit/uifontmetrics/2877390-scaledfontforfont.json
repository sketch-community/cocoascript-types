      "parameters": [
        {
          "name": "font",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The base font to use when applying the style information. Set the size of your font to the standard Dynamic Type size that you use for the corresponding content. Do not specify a font that has already been scaled; doing so results in an exception."
                }
              ]
            }
          ]
        },
        {
          "name": "maximumPointSize",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The maximum point size allowed for the font. Use this value to constrain the font to the specified size when your interface cannot accommodate text that is any larger."
                }
              ]
            }
          ]
        },
        {
          "name": "traitCollection",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The trait collection to use when determining compatibility. The returned font is appropriate for use in an interface that adopts the specified traits."
                }
              ]
            }
          ]
        }
      ]
