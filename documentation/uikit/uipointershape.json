      "content": [
        {
          "anchor": "overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "If the desired pointer shape can be expressed as a rounded rectangle, use either "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/uikit/uipointershape/3539022-shapewithroundedrect"
            },
            {
              "type": "text",
              "text": " or "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/uikit/uipointershape/3539023-shapewithroundedrect"
            },
            {
              "type": "text",
              "text": " for best results."
            }
          ]
        },
        {
          "type": "aside",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "If used alongside a content effect, this rectangle must be in the view coordinate space of the "
                },
                {
                  "type": "reference",
                  "isActive": true,
                  "identifier": "doc://com.apple.documentation/documentation/uikit/uipointereffect/3543901-preview"
                },
                {
                  "type": "text",
                  "text": ". Otherwise, it’s centered about the pointer's current location, and the rectangle's origin is interpreted as an offset."
                }
              ]
            }
          ],
          "style": "note",
          "name": "Note"
        }
      ]
    }
