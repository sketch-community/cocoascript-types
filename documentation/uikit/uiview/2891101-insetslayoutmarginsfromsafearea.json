        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "When the value of this property is "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/objectivec/yes"
            },
            {
              "type": "text",
              "text": ", any margins that are outside the safe area are automatically modified to fall within the safe area boundary. The default value of this property is "
            },
            {
              "type": "reference",
              "isActive": false,
              "identifier": "doc://com.apple.documentation/documentation/objectivec/yes"
            },
            {
              "type": "text",
              "text": ". Changing the value to "
            },
            {
              "type": "reference",
              "isActive": false,
              "identifier": "doc://com.apple.documentation/documentation/objectivec/no"
            },
            {
              "type": "text",
              "text": " allows your margins to remain at their original locations, even when they are outside the safe area."
            }
          ]
        }
