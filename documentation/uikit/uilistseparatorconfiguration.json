      "kind": "content",
      "content": [
        {
          "anchor": "overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "To specify list separator appearance for a section, set a default sectionwide "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/uikit/uicollectionlayoutlistconfiguration/3727309-separatorconfiguration"
            },
            {
              "type": "text",
              "text": " on your "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/uikit/uicollectionlayoutlistconfiguration"
            },
            {
              "type": "text",
              "text": " when you create your list."
            }
          ]
        },
        {
          "type": "codeListing",
          "code": [
            "var listConfig = UICollectionLayoutListConfiguration(appearance: .plain)",
            "listConfig.separatorConfiguration.color = .tertiarySystemFill",
            "let layout = UICollectionViewCompositionalLayout.list(using: listConfig)"
          ],
          "syntax": "swift",
          "metadata": {
            "anchor": "3729237",
            "title": "Listing 1"
          }
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "To override list separator appearance on a per-item basis, use the "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/uikit/uicollectionlayoutlistconfiguration/3727308-itemseparatorhandler"
            },
            {
              "type": "text",
              "text": " property."
            }
          ]
        },
        {
          "type": "codeListing",
          "code": [
            "var listConfig = UICollectionLayoutListConfiguration(appearance: .plain)",
            "listConfig.separatorConfiguration.color = .tertiarySystemFill",
            "",
            "let indexPathToHide = IndexPath() ",
            " ",
            "listConfig.itemSeparatorHandler = { (indexPath, sectionSeparatorConfiguration) in    ",
            "    var configuration = sectionSeparatorConfiguration",
            "    if indexPath == indexPathToHide {",
            "        configuration.bottomSeparatorVisibility = .hidden    ",
            "    }    ",
            "    return configuration",
            "}",
            "",
            "let layout = UICollectionViewCompositionalLayout.list(using: listConfig)"
          ],
          "syntax": "swift",
          "metadata": {
            "anchor": "3729238",
            "title": "Listing 2"
          }
        },
