        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "Enable battery monitoring if your app needs to be notified of changes to the battery state, or if you want to check the battery charge level."
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "The default value of this property is "
            },
            {
              "type": "reference",
              "isActive": false,
              "identifier": "doc://com.apple.documentation/documentation/objectivec/no"
            },
            {
              "type": "text",
              "text": ", which:"
            }
          ]
        },
        {
          "type": "unorderedList",
          "items": [
            {
              "content": [
                {
                  "type": "paragraph",
                  "inlineContent": [
                    {
                      "type": "text",
                      "text": "Disables the posting of battery-related notifications"
                    }
                  ]
                }
              ]
            },
            {
              "content": [
                {
                  "type": "paragraph",
                  "inlineContent": [
                    {
                      "type": "text",
                      "text": "Disables the ability to read battery charge level and battery state"
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
