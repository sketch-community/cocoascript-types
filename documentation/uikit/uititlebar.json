    {
      "kind": "content",
      "content": [
        {
          "anchor": "overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "Each "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/uikit/uiwindowscene"
            },
            {
              "type": "text",
              "text": " has a "
            },
            {
              "type": "reference",
              "isActive": false,
              "identifier": "doc://com.apple.documentation/documentation/uikit/uititlebar"
            },
            {
              "type": "text",
              "text": " object available in Mac apps built with Mac Catalyst. You use this object to configure the title bar and its toolbar. "
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "To show or hide a title in the title bar, set the "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/uikit/uititlebar/3375824-titlevisibility"
            },
            {
              "type": "text",
              "text": " property to "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/uikit/uititlebartitlevisibility/uititlebartitlevisibilityvisible"
            },
            {
              "type": "text",
              "text": " or "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/uikit/uititlebartitlevisibility/uititlebartitlevisibilityhidden"
            },
            {
              "type": "text",
              "text": ". If you set the visibility to hidden and the title bar’s "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/uikit/uititlebar/3375825-toolbar"
            },
            {
              "type": "text",
              "text": " property is "
            },
            {
              "type": "codeVoice",
              "code": "nil"
            },
            {
              "type": "text",
              "text": ", the window displays only the window control buttons (Close, Minimize, and Zoom)."
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "To add a toolbar to a window, create an "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/appkit/nstoolbar"
            },
            {
              "type": "text",
              "text": " object and assign it to the title bar’s "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/uikit/uititlebar/3375825-toolbar"
            },
            {
              "type": "text",
              "text": " property. To automatically hide the toolbar when the window enters full-screen mode, set the "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/uikit/uititlebar/3375822-autohidestoolbarinfullscreen"
            },
            {
              "type": "text",
              "text": " property to "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/objectivec/yes"
            },
            {
              "type": "text",
              "text": "."
            }
          ]
        },
        {
          "type": "codeListing",
          "code": [
            "func scene(_ scene: UIScene, willConnectTo session: UISceneSession, options connectionOptions: UIScene.ConnectionOptions) {",
            "    ",
            "    guard let windowScene = (scene as? UIWindowScene) else { return }",
            "    ",
            "    #if targetEnvironment(macCatalyst)",
            "    if  let titlebar = windowScene.titlebar {",
            "        let identifier = NSToolbar.Identifier(\"com.example.apple-samplecode.toolbar\")",
            "        titlebar.toolbar = NSToolbar(identifier: identifier)",
            "        titlebar.toolbar?.delegate = self",
            "        titlebar.autoHidesToolbarInFullScreen = true",
            "    }",
            "    #endif",
            "}"
          ],
          "syntax": "swift",
