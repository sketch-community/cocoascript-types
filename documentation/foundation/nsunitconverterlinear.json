    {
      "kind": "content",
      "content": [
        {
          "anchor": "overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "A linear equation for unit conversion takes the form "
            },
            {
              "type": "codeVoice",
              "code": "y = mx + b"
            },
            {
              "type": "text",
              "text": ", such that:"
            }
          ]
        },
        {
          "type": "unorderedList",
          "items": [
            {
              "content": [
                {
                  "type": "paragraph",
                  "inlineContent": [
                    {
                      "type": "strong",
                      "inlineContent": [
                        {
                          "type": "text",
                          "text": "y"
                        }
                      ]
                    },
                    {
                      "type": "text",
                      "text": " is the value in terms of the base unit of the dimension"
                    }
                  ]
                }
              ]
            },
            {
              "content": [
                {
                  "type": "paragraph",
                  "inlineContent": [
                    {
                      "type": "strong",
                      "inlineContent": [
                        {
                          "type": "text",
                          "text": "m"
                        }
                      ]
                    },
                    {
                      "type": "text",
                      "text": " is the known coefficient used for this unit's conversion"
                    }
                  ]
                }
              ]
            },
            {
              "content": [
                {
                  "type": "paragraph",
                  "inlineContent": [
                    {
                      "type": "strong",
                      "inlineContent": [
                        {
                          "type": "text",
                          "text": "x"
                        }
                      ]
                    },
                    {
                      "type": "text",
                      "text": " is the value in terms of the unit on which this method is called"
                    }
                  ]
                }
              ]
            },
            {
              "content": [
                {
                  "type": "paragraph",
                  "inlineContent": [
                    {
                      "type": "strong",
                      "inlineContent": [
                        {
                          "type": "text",
                          "text": "b"
                        }
                      ]
                    },
                    {
                      "type": "text",
                      "text": " is the known constant used for this unit's conversion"
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "The "
            },
            {
              "type": "codeVoice",
              "code": "baseUnitValueFromValue:"
            },
            {
              "type": "text",
              "text": " method performs the conversion in the form of "
            },
            {
              "type": "codeVoice",
              "code": "y = mx + b"
            },
            {
              "type": "text",
              "text": ", where "
            },
            {
              "type": "codeVoice",
              "code": "x"
            },
            {
              "type": "text",
              "text": " represents the value passed in and "
            },
            {
              "type": "codeVoice",
              "code": "y"
            },
            {
              "type": "text",
              "text": " represents the value returned. The "
            },
            {
              "type": "codeVoice",
              "code": "valueFromBaseUnitValue:"
            },
            {
              "type": "text",
              "text": " method performs the inverse conversion in the form of "
            },
            {
              "type": "codeVoice",
              "code": "x = (y - b) / m"
            },
            {
              "type": "text",
              "text": ", where "
            },
            {
              "type": "codeVoice",
              "code": "y"
            },
            {
              "type": "text",
              "text": " represents the value passed in and "
            },
            {
              "type": "codeVoice",
              "code": "x"
            },
            {
              "type": "text",
              "text": " represents the value returned."
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "For example, consider the "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/foundation/nsunittemperature/1690842-fahrenheit"
            },
            {
              "type": "text",
              "text": " unit defined by "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/foundation/nsunittemperature"
            },
            {
              "type": "text",
              "text": ": The "
            },
            {
              "type": "codeVoice",
              "code": "baseUnitValueFromValue:"
            },
            {
              "type": "text",
              "text": " method calculates the value in the base unit, "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/foundation/nsunittemperature/1690766-kelvin"
            },
            {
              "type": "text",
              "text": " using the formula "
            },
            {
              "type": "codeVoice",
              "code": "K = (0.55555555555556) × °F + 255.37222222222427"
            },
            {
              "type": "text",
              "text": ", and the "
            },
            {
              "type": "codeVoice",
              "code": "valueFromBaseUnitValue:"
            },
            {
              "type": "text",
              "text": " method calculates the value in "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/foundation/nsunittemperature/1690842-fahrenheit"
            },
            {
              "type": "text",
              "text": " using the formula "
            },
            {
              "type": "codeVoice",
              "code": "°F = (K — 255.37222222222427) / (0.55555555555556)"
            },
            {
              "type": "text",
              "text": ", where the "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/foundation/nsunitconverterlinear/1823683-coefficient"
            },
            {
              "type": "text",
              "text": " is "
            },
            {
              "type": "codeVoice",
              "code": "(0.55555555555556)"
            },
            {
              "type": "text",
              "text": " and the "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/foundation/nsunitconverterlinear/1823598-constant"
            },
            {
              "type": "text",
              "text": " is "
            },
            {
              "type": "codeVoice",
              "code": "255.37222222222427"
            },
            {
              "type": "text",
              "text": "."
            }
          ]
        },
        {
          "type": "codeListing",
          "code": [
            "NSUnitConverter *kelvinToFahrenheit = [[NSUnitConverterLinear alloc] initWithCoefficient:0.55555555555556 constant:255.37222222222427];"
          ],
          "syntax": "occ",
          "metadata": {
            "anchor": "2557055",
            "title": "Listing 1"
          }
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "Units that perform conversion using only a scale factor have a "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/foundation/nsunitconverterlinear/1823683-coefficient"
            },
            {
              "type": "text",
              "text": " equal to the scale factor and a "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/foundation/nsunitconverterlinear/1823598-constant"
            },
            {
              "type": "text",
              "text": " equal "
            },
            {
              "type": "codeVoice",
              "code": "0"
            },
            {
              "type": "text",
              "text": ". For example, consider the "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/foundation/nsunitlength/1856106-kilometers"
            },
            {
              "type": "text",
              "text": " unit defined by "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/foundation/nsunitlength"
            },
            {
              "type": "text",
              "text": ": The "
            },
            {
              "type": "codeVoice",
              "code": "baseUnitValueFromValue:"
            },
            {
              "type": "text",
              "text": " method calculates the value in meters using the formula "
            },
            {
              "type": "codeVoice",
              "code": "valueInMeters = 1000 * valueInKilometers + 0"
            },
            {
              "type": "text",
              "text": ", and the "
            },
            {
              "type": "codeVoice",
              "code": "valueFromBaseUnitValue:"
            },
            {
              "type": "text",
              "text": " calculates the value in kilometers using the formula "
            },
            {
              "type": "codeVoice",
              "code": "valueInKilometers = (valueInMeters - 0) / 1000"
            },
            {
              "type": "text",
              "text": ", where the coefficient is "
            },
            {
              "type": "codeVoice",
              "code": "1000"
            },
            {
              "type": "text",
              "text": " and the constant is "
            },
            {
              "type": "codeVoice",
              "code": "0"
            },
            {
              "type": "text",
              "text": "."
            }
          ]
        },
        {
          "type": "codeListing",
          "code": [
            "NSUnitConverterLinear *kilometersToMeters = [[NSUnitConverterLinear alloc] initWithCoefficient:1000.0 constant:0.0];"
          ],
          "syntax": "occ",
          "metadata": {
            "anchor": "2557059",
            "title": "Listing 2"
          }
        }
      ]
    }
