      "kind": "content",
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "After "
            },
            {
              "type": "codeVoice",
              "code": "interval"
            },
            {
              "type": "text",
              "text": " seconds have elapsed, the timer fires, executing "
            },
