      "parameters": [
        {
          "name": "interval",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The number of seconds between firings of the timer. If "
                },
                {
                  "type": "codeVoice",
                  "code": "interval"
                },
                {
                  "type": "text",
                  "text": " is less than or equal to "
                },
                {
                  "type": "codeVoice",
                  "code": "0.0"
                },
                {
                  "type": "text",
                  "text": ", this method chooses the nonnegative value of "
                },
                {
                  "type": "codeVoice",
                  "code": "0.0001"
                },
                {
                  "type": "text",
                  "text": " seconds instead."
                }
              ]
            }
          ]
        },
        {
          "name": "repeats",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "If "
                },
                {
                  "type": "codeVoice",
                  "code": "true"
                },
                {
                  "type": "text",
                  "text": ", the timer will repeatedly reschedule itself until invalidated. If "
                },
                {
                  "type": "codeVoice",
                  "code": "false"
                },
                {
                  "type": "text",
                  "text": ", the timer will be invalidated after it fires."
                }
              ]
            }
          ]
        },
        {
          "name": "block",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "A block to be executed when the timer fires."
                }
              ]
            },
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The block takes a single "
                },
                {
                  "type": "codeVoice",
                  "code": "NSTimer"
                },
                {
                  "type": "text",
                  "text": " parameter and has no return value."
                }
              ]
            }
          ]
        }
      ]
    },
