    {
      "kind": "parameters",
      "languages": [
        "occ"
      ],
      "parameters": [
        {
          "name": "ti",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The number of seconds between firings of the timer. If "
                },
                {
                  "type": "codeVoice",
                  "code": "ti"
                },
                {
                  "type": "text",
                  "text": " is less than or equal to "
                },
                {
                  "type": "codeVoice",
                  "code": "0.0"
                },
                {
                  "type": "text",
                  "text": ", this method chooses the nonnegative value of "
                },
                {
                  "type": "codeVoice",
                  "code": "0.0001"
                },
                {
                  "type": "text",
                  "text": " seconds instead."
                }
              ]
            }
          ]
        },
        {
          "name": "invocation",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The invocation to use when the timer fires. The timer instructs the invocation object to maintain a strong reference to its arguments."
                }
              ]
            }
          ]
        },
        {
          "name": "repeats",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "If "
                },
                {
                  "type": "reference",
                  "isActive": false,
                  "identifier": "doc://com.apple.documentation/documentation/objectivec/yes"
                },
                {
                  "type": "text",
                  "text": ", the timer will repeatedly reschedule itself until invalidated. If "
                },
                {
                  "type": "reference",
                  "isActive": false,
                  "identifier": "doc://com.apple.documentation/documentation/objectivec/no"
                },
                {
                  "type": "text",
                  "text": ", the timer will be invalidated after it fires."
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "kind": "content",
      "content": [
        {
          "anchor": "return_value",
          "level": 2,
          "text": "Return Value",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "A new "
            },
            {
              "type": "codeVoice",
              "code": "NSTimer"
            },
            {
              "type": "text",
              "text": " object, configured according to the specified parameters."
            }
          ]
        }
      ]
    },
    {
      "kind": "content",
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "You must add the new timer to a run loop, using "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/foundation/nsrunloop/1418468-addtimer"
            },
            {
              "type": "text",
              "text": ". Then, after "
            },
            {
              "type": "codeVoice",
              "code": "ti"
            },
            {
              "type": "text",
              "text": " have elapsed, the timer fires, invoking "
            },
            {
              "type": "codeVoice",
              "code": "invocation"
            },
            {
              "type": "text",
              "text": ". (If the timer is configured to repeat, there is no need to subsequently re-add the timer to the run loop.)"
            }
          ]
        }
      ]
    }
