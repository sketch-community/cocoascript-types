      "parameters": [
        {
          "name": "custom",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "A closure that receives as a parameter an array of CodingKey instances representing the sequence of keys needed to reach the value the decoder is currently decoding."
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "kind": "content",
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "The value associated with this case is a closure you use to map names of keys from the decoded JSON object to the names of your type’s coding keys. During decoding, the closure executes once for each key in the "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/swift/decodable"
            },
            {
              "type": "text",
              "text": " value. When called, the closure receives an array of "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/swift/codingkey"
            },
            {
              "type": "text",
              "text": " instances representing the sequence of keys needed to reach the value the decoder is currently decoding."
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "The example below shows how to decode the properties of the nested "
            },
            {
              "type": "codeVoice",
              "code": "A"
            },
            {
              "type": "text",
              "text": ", "
            },
            {
              "type": "codeVoice",
              "code": "B"
            },
            {
              "type": "text",
              "text": ", and "
            },
            {
              "type": "codeVoice",
              "code": "C"
            },
            {
              "type": "text",
              "text": " structures with custom logic that you specify in the closure value associated with the custom case."
            }
          ]
        },
        {
          "type": "codeListing",
          "code": [
            "struct A: Codable {",
            "    var value: Int",
            "    var b: B",
            "    ",
            "    struct B: Codable {",
            "        var value: Int",
            "        var c: C",
            "        ",
            "        struct C: Codable {",
            "            var value: Int",
            "        }",
            "    }",
            "}",
            "",
            "let json = \"\"\"",
            "{",
            "    \"a.value\": 1,",
            "    \"b\": {",
            "        \"a.b.value\": 2,",
            "        \"c\": {",
            "            \"a.b.c.value\": 3",
            "        }",
            "    }",
            "}",
            "\"\"\".data(using: .utf8)!",
            "",
            "let decoder = JSONDecoder()",
            "",
            "/// An implementation of CodingKey that's useful for combining and transforming keys as strings.",
            "struct AnyKey: CodingKey {",
            "    var stringValue: String",
            "    var intValue: Int?",
            "    ",
            "    init?(stringValue: String) {",
            "        self.stringValue = stringValue",
            "        self.intValue = nil",
            "    }",
            "    ",
            "    init?(intValue: Int) {",
            "        self.stringValue = String(intValue)",
            "        self.intValue = intValue",
            "    }",
            "}"
          ],
          "syntax": "swift",
          "metadata": {
            "anchor": "2952421",
            "title": "Listing 1"
          }
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "In the next example you use the "
            },
            {
              "type": "codeVoice",
              "code": "AnyKey"
            },
            {
              "type": "text",
              "text": " structure defined above to customize the decoding of the "
            },
            {
              "type": "codeVoice",
              "code": "A"
            },
            {
              "type": "text",
              "text": ", "
            },
            {
              "type": "codeVoice",
              "code": "B"
            },
            {
              "type": "text",
              "text": ", and "
            },
            {
              "type": "codeVoice",
              "code": "C"
            },
            {
              "type": "text",
              "text": " structures."
            }
          ]
        },
        {
          "type": "codeListing",
          "code": [
            "// Customize each key to remove any preceding, dot-syntax paths.",
            "decoder.keyDecodingStrategy = .custom { keys in",
            "    let lastComponent = keys.last!.stringValue.split(separator: \".\").last!",
            "    return AnyKey(stringValue: String(lastComponent))!",
            "}",
            "",
            "let a = try decoder.decode(A.self, from: json)",
            "",
            "print(a.b.c.value) // Prints \"3\""
          ],
          "syntax": "swift",
          "metadata": {
            "anchor": "2952420",
            "title": "Listing 2"
          }
        },
        {
          "type": "paragraph",
          "inlineContent": []
        }
      ]
