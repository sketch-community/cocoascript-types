      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "When you use this option, string formatting applies the "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/foundation/nsattributedstring/key/3746903-replacementindex"
            },
            {
              "type": "text",
              "text": " key to the final range of each replacement. Its value is an "
            },
            {
              "type": "codeVoice",
              "code": "Int"
            },
            {
              "type": "text",
              "text": ", wrapping the integer ordinal of that particular replacement, such as the "
            },
            {
              "type": "codeVoice",
              "code": "2"
            },
            {
              "type": "text",
              "text": " in "
            },
            {
              "type": "codeVoice",
              "code": "%2$@"
            },
            {
              "type": "text",
              "text": ". This allows the developer to relate ranges to replacements even if a localizer modifies the word order."
            }
          ]
        }
      ]
    }
