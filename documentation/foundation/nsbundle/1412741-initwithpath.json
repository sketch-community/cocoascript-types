          "name": "fullPath",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The path to a directory. This must be a full pathname for a directory; if it contains any symbolic links, they must be resolvable."
                }
              ]
            }
          ]
        }
