    {
      "kind": "content",
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "Obtains the actual size and the aligned size of the first data type represented by "
            },
            {
              "type": "codeVoice",
              "code": "typePtr"
            },
            {
              "type": "text",
              "text": " and returns a pointer to the position of the next data type in "
            },
            {
              "type": "codeVoice",
              "code": "typePtr"
            },
            {
              "type": "text",
              "text": ". You can specify "
            },
            {
              "type": "codeVoice",
              "code": "NULL"
            },
            {
              "type": "text",
              "text": " for either "
            },
            {
              "type": "codeVoice",
              "code": "sizep"
            },
            {
              "type": "text",
              "text": " or "
            },
            {
              "type": "codeVoice",
              "code": "alignp"
            },
            {
              "type": "text",
              "text": " to ignore the corresponding information."
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "The value returned in "
            },
            {
              "type": "codeVoice",
              "code": "alignp"
            },
            {
              "type": "text",
              "text": " is the aligned size of the data type; for example, on some platforms, the aligned size of a "
            },
            {
              "type": "codeVoice",
              "code": "char"
            },
            {
              "type": "text",
              "text": " might be 2 bytes while the actual physical size is 1 byte."
            }
          ]
        }
      ]
    }
