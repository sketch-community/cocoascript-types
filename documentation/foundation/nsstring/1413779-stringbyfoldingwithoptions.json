                },
                {
                  "type": "text",
                  "text": ", and "
                },
                {
                  "type": "reference",
                  "isActive": true,
                  "identifier": "doc://com.apple.documentation/documentation/foundation/nsstringcompareoptions/nsdiacriticinsensitivesearch"
                },
                {
                  "type": "text",
                  "text": " comparison options."
                }
              ]
            }
          ]
        },
        {
          "name": "locale",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The locale to use for the folding operation. Pass "
                },
                {
                  "type": "codeVoice",
                  "code": "nil"
                },
                {
                  "type": "text",
                  "text": " to use the system locale."
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "kind": "content",
      "content": [
        {
          "anchor": "return_value",
          "level": 2,
