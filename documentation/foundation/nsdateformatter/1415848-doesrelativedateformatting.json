            },
            {
              "type": "text",
              "text": " if the receiver uses relative date formatting, otherwise "
            },
            {
              "type": "reference",
              "isActive": false,
              "identifier": "doc://com.apple.documentation/documentation/objectivec/no"
            },
            {
              "type": "text",
              "text": ". "
