      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "The proxy returned can change between invocations if the peer "
            },
            {
              "type": "codeVoice",
              "code": "NSConnection"
            },
            {
              "type": "text",
              "text": " object's root object is changed."
            }
          ]
        },
        {
          "type": "aside",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "If the "
                },
                {
                  "type": "codeVoice",
                  "code": "NSConnection"
                },
                {
                  "type": "text",
                  "text": " object uses separate send and receive ports and has no peer, when you invoke "
                },
                {
                  "type": "codeVoice",
                  "code": "rootProxy"
                },
                {
                  "type": "text",
                  "text": " it will block for the duration of the reply timeout interval, waiting for a reply."
                }
              ]
            }
          ],
          "style": "note",
          "name": "Note"
        }
      ]
    }
