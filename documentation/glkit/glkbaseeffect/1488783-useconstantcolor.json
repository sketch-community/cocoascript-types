        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "If the value is set to "
            },
            {
              "type": "codeVoice",
              "code": "GL_TRUE"
            },
            {
              "type": "text",
              "text": ", then the value stored in the "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/glkit/glkbaseeffect/1488903-constantcolor"
            },
            {
              "type": "text",
              "text": " property is used as the color value for each vertex. If the value is set to "
            },
            {
              "type": "codeVoice",
              "code": "GL_FALSE"
            },
            {
              "type": "text",
              "text": ", then your application is expected to enable the "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/glkit/glkvertexattrib/glkvertexattribcolor"
            },
            {
              "type": "text",
              "text": " attribute and provide per-vertex color data. The default value is "
            },
            {
              "type": "codeVoice",
              "code": "GL_FALSE"
            },
            {
              "type": "text",
              "text": "."
            }
          ]
        }
