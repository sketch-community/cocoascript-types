      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "The distance attenuation factor is calculated as "
            },
            {
              "type": "codeVoice",
              "code": "1.0 / (k0 + k1 * d + k2 * d * d)"
            },
            {
              "type": "text",
              "text": ", where "
            },
            {
              "type": "codeVoice",
              "code": "d"
            },
            {
              "type": "text",
              "text": " represents the distance from the light to the point being lit. The "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/glkit/glkeffectpropertylight/1473574-constantattenuation"
            },
            {
              "type": "text",
              "text": " property is represented in this calculation as "
            },
            {
              "type": "codeVoice",
              "code": "k0"
            },
            {
              "type": "text",
              "text": ". The default value is "
            },
            {
              "type": "codeVoice",
              "code": "1.0"
            },
            {
              "type": "text",
              "text": "."
            }
          ]
        }
      ]
    }
