    {
      "kind": "content",
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "This function is similar to "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/accelerate/1545863-vimagematrixmultiply_argbffff"
            },
            {
              "type": "text",
              "text": " but produces a single channel output. It’s intended to produce grayscale images from four channel content, but can be used for other purposes."
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "The calculation for each pixel is:"
            }
          ]
        },
        {
          "type": "codeListing",
          "code": [
            "float p = (pixel[y][x][0] + pre_bias[0]) * matrix[0]  +                                  ",
            "          (pixel[y][x][1] + pre_bias[1]) * matrix[1]  +                                  ",
            "          (pixel[y][x][2] + pre_bias[2]) * matrix[2]  +                                  ",
            "          (pixel[y][x][3] + pre_bias[3]) * matrix[3];                      ",
            " ",
            "result[y][x] = p + post_bias;"
          ],
          "syntax": "other",
          "metadata": {
            "anchor": "2937118",
            "title": "Listing 1"
          }
        },
        {
          "type": "paragraph",
          "inlineContent": []
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "This function will work in place, provided that "
            },
            {
              "type": "codeVoice",
              "code": "src->data = dest->data"
            },
            {
              "type": "text",
              "text": " and "
            },
            {
              "type": "codeVoice",
              "code": "src->rowBytes = dest->rowBytes"
            },
            {
              "type": "text",
              "text": ".   "
            }
          ]
        }
      ]
    }
