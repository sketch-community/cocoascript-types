      "parameters": [
        {
          "name": "buf",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "A valid empty "
                },
                {
                  "type": "reference",
                  "isActive": true,
                  "identifier": "doc://com.apple.documentation/documentation/accelerate/vimage_buffer"
                },
                {
                  "type": "text",
                  "text": " structure. On return, all fields are initialized."
                }
              ]
            }
          ]
        },
        {
          "name": "height",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The height of the image."
                }
              ]
            }
          ]
        },
        {
          "name": "width",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The width of the image."
                }
              ]
            }
          ]
        },
        {
          "name": "pixelBits",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The number of bits in a pixel of image data. If "
                },
                {
                  "type": "codeVoice",
                  "code": "pixelBits"
                },
                {
                  "type": "text",
                  "text": " isn't divisible by 8, vImage pads the scanline out to a multiple of a byte so that two scanlines can't share the same byte, and all scanlines start at the beginning of a byte."
                }
              ]
            }
          ]
        },
        {
          "name": "flags",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The options to use when performing this operation. The following flags are supported:"
                }
              ]
            },
            {
              "type": "table",
              "header": "none",
              "rows": [
                [
                  [
                    {
                      "type": "paragraph",
                      "inlineContent": [
                        {
                          "type": "reference",
                          "isActive": true,
                          "identifier": "doc://com.apple.documentation/documentation/accelerate/1578976-processing_flags/kvimagenoflags"
                        }
                      ]
                    }
                  ],
                  [
                    {
                      "type": "paragraph",
                      "inlineContent": [
                        {
                          "type": "text",
                          "text": "Default behavior."
                        }
                      ]
                    }
                  ]
                ],
                [
                  [
                    {
                      "type": "paragraph",
                      "inlineContent": [
                        {
                          "type": "reference",
                          "isActive": true,
                          "identifier": "doc://com.apple.documentation/documentation/accelerate/1578976-processing_flags/kvimagenoallocate"
                        }
                      ]
                    }
                  ],
                  [
                    {
                      "type": "paragraph",
                      "inlineContent": [
                        {
                          "type": "text",
                          "text": "On return, "
                        },
                        {
                          "type": "codeVoice",
                          "code": "buf->data"
                        },
                        {
                          "type": "text",
                          "text": " is initialized to NULL. A preferred alignment suitable for use with "
                        },
                        {
                          "type": "codeVoice",
                          "code": "posix_memalign(_:_:_:)"
                        },
                        {
                          "type": "text",
                          "text": " is returned and "
                        },
                        {
                          "type": "codeVoice",
                          "code": "buf->rowBytes"
                        },
                        {
                          "type": "text",
                          "text": " is set to the preferred "
                        },
                        {
                          "type": "codeVoice",
                          "code": "rowBytes"
                        },
                        {
                          "type": "text",
                          "text": ". A negative value returned by the function represents an error code, not a size."
                        }
                      ]
                    }
                  ]
                ],
                [
                  [
                    {
                      "type": "paragraph",
                      "inlineContent": [
                        {
                          "type": "reference",
                          "isActive": true,
                          "identifier": "doc://com.apple.documentation/documentation/accelerate/1578976-processing_flags/kvimageprintdiagnosticstoconsole"
                        }
                      ]
                    }
                  ],
                  [
                    {
                      "type": "paragraph",
                      "inlineContent": [
                        {
                          "type": "text",
                          "text": "Prints a debug message if the operation fails."
                        }
                      ]
                    }
                  ]
                ]
              ],
              "metadata": {
                "anchor": "2936322",
                "title": "Table 1"
              }
            }
          ]
        }
      ]
