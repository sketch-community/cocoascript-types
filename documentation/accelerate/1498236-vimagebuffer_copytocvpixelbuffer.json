          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "A pointer to a vImage buffer that contains the pixels to be copied to the Core Video pixel buffer."
                }
              ]
            }
          ]
        },
        {
          "name": "bufferFormat",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The format of source vImage buffer."
                }
              ]
            }
          ]
        },
        {
          "name": "cvPixelBuffer",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The destination Core Video pixel buffer. It's not necessary to lock this buffer before calling the function. "
                }
              ]
            }
          ]
        },
        {
          "name": "cvImageFormat",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "An optional "
                },
                {
                  "type": "reference",
                  "isActive": true,
                  "identifier": "doc://com.apple.documentation/documentation/accelerate/vimagecvimageformatref"
                },
                {
                  "type": "text",
                  "text": " that specifies the pixel format of the destination buffer. If "
                },
                {
                  "type": "codeVoice",
                  "code": "NULL"
                },
                {
                  "type": "text",
                  "text": ", vImage attempts to discover this information automatically. "
                }
              ]
            }
          ]
        },
        {
          "name": "backgroundColor",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "A background color to flatten against; used if "
                },
                {
                  "type": "codeVoice",
                  "code": "bufferFormat"
                },
                {
                  "type": "text",
                  "text": " encodes an alpha channel."
                }
              ]
            }
          ]
        },
        {
          "name": "flags",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The options to use when performing this operation. The following flags are supported:"
                }
              ]
            },
            {
              "type": "table",
              "header": "none",
              "rows": [
                [
                  [
                    {
                      "type": "paragraph",
                      "inlineContent": [
                        {
                          "type": "reference",
                          "isActive": true,
                          "identifier": "doc://com.apple.documentation/documentation/accelerate/1578976-processing_flags/kvimagenoflags"
                        }
                      ]
                    }
                  ],
                  [
                    {
                      "type": "paragraph",
                      "inlineContent": [
                        {
                          "type": "text",
                          "text": "Default operation."
                        }
                      ]
                    }
                  ]
                ],
                [
                  [
                    {
                      "type": "paragraph",
                      "inlineContent": [
                        {
                          "type": "reference",
                          "isActive": true,
                          "identifier": "doc://com.apple.documentation/documentation/accelerate/1578976-processing_flags/kvimagedonottile"
                        }
                      ]
                    }
                  ],
                  [
                    {
                      "type": "paragraph",
                      "inlineContent": [
                        {
                          "type": "text",
                          "text": "Turns off internal multithreading."
                        }
                      ]
                    }
                  ]
                ],
                [
                  [
                    {
                      "type": "paragraph",
                      "inlineContent": [
                        {
                          "type": "reference",
                          "isActive": true,
                          "identifier": "doc://com.apple.documentation/documentation/accelerate/1578976-processing_flags/kvimageprintdiagnosticstoconsole"
                        }
                      ]
                    }
                  ],
                  [
                    {
                      "type": "paragraph",
                      "inlineContent": [
                        {
                          "type": "text",
                          "text": "Prints diagnostic information to the console in the event of failure."
                        }
                      ]
                    }
                  ]
                ]
