    {
      "kind": "content",
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "This performs the following operation:"
            }
          ]
        },
        {
          "type": "codeListing",
          "code": [
            "for (n = 0; n < N; ++n)",
            "{",
            "    x = A[n*IA+0];",
            "    y = A[n*IA+1];",
            "    C[n*IC+0] = sqrt(x**2 + y**2);",
            "    C[n*IC+1] = atan2(y, x);",
            "}"
          ],
          "syntax": "other",
          "metadata": {
            "anchor": "3239953",
            "title": "Listing 1"
          }
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "Converts rectangular coordinates to polar coordinates. Vector "
            },
            {
              "type": "codeVoice",
              "code": "A"
            },
            {
              "type": "text",
              "text": " defines Cartesian (x, y) pairs. The function writes polar (rho, theta) pairs, where rho is the radius and theta is the angle in the range "
            },
            {
              "type": "codeVoice",
              "code": "[-pi, pi]"
            },
            {
              "type": "text",
              "text": " to vector "
            },
            {
              "type": "codeVoice",
              "code": "C"
            },
            {
              "type": "text",
              "text": ". "
            },
            {
              "type": "codeVoice",
              "code": "N"
            },
            {
              "type": "text",
              "text": " specifies the number of coordinate pairs in "
            },
            {
              "type": "codeVoice",
              "code": "A"
            },
            {
              "type": "text",
              "text": " and "
            },
            {
              "type": "codeVoice",
              "code": "C"
            },
            {
              "type": "text",
              "text": "."
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "Coordinate pairs are adjacent elements in the array, regardless of stride; stride is the distance from one coordinate pair to the next."
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "The following code shows how to convert a single pair of rectangular coordinates to their polar equivalent. "
            }
          ]
        },
        {
          "type": "codeListing",
          "code": [
            "let x = 5.0",
            "let y = 5.0",
            "",
            "let rectangularCoordinates = [x, y]",
            "",
            "var polarCoordinates: [Double] = [0, 0]",
            "",
            "let stride = vDSP_Stride(2)",
            "let n = vDSP_Length(1)",
            "",
            "vDSP_polarD(rectangularCoordinates, stride,",
            "            &polarCoordinates, stride,",
            "            n)",
            "",
            "let radius = polarCoordinates[0]",
            "let angle = Measurement(value: polarCoordinates[1],",
            "                        unit: UnitAngle.radians)",
            "    .converted(to: UnitAngle.degrees)",
            "    .value"
          ],
          "syntax": "swift",
          "metadata": {
            "anchor": "3239958",
            "title": "Listing 2"
          }
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "On return, "
            },
            {
              "type": "codeVoice",
              "code": "radius"
            },
            {
              "type": "text",
              "text": " is "
            },
            {
              "type": "codeVoice",
              "code": "7.07"
            },
            {
              "type": "text",
              "text": ", and "
            },
            {
              "type": "codeVoice",
              "code": "angle"
            },
            {
              "type": "text",
              "text": " is "
            },
            {
              "type": "codeVoice",
              "code": "45"
            },
            {
              "type": "text",
              "text": "."
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "This function performs the inverse operation of "
            },
            {
              "type": "codeVoice",
              "code": "vDSP_rect"
            },
            {
              "type": "text",
              "text": ", which converts polar to rectangular coordinates."
            }
          ]
        }
      ]
    }
