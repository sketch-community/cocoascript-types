  "primaryContentSections": [
    {
      "kind": "content",
      "content": [
        {
          "anchor": "overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "A typical Core Graphics-based vImage workflow consists of:"
            }
          ]
        },
        {
          "type": "orderedList",
          "items": [
            {
              "content": [
                {
                  "type": "paragraph",
                  "inlineContent": [
                    {
                      "type": "text",
                      "text": "Selecting a source image; for example, a Core Graphics-backed "
                    },
                    {
                      "type": "reference",
                      "isActive": true,
                      "identifier": "doc://com.apple.documentation/documentation/uikit/uiimage"
                    },
                    {
                      "type": "text",
                      "text": " instance."
                    }
                  ]
                }
              ]
            },
            {
              "content": [
                {
                  "type": "paragraph",
                  "inlineContent": [
                    {
                      "type": "text",
                      "text": "Initializing a vImage buffer from the image's bitmap data."
                    }
                  ]
                }
              ]
            },
            {
              "content": [
                {
                  "type": "paragraph",
                  "inlineContent": [
                    {
                      "type": "text",
                      "text": "Performing an operation on the vImage buffer; for example, scaling or adjusting gamma."
                    }
                  ]
                }
              ]
            },
            {
              "content": [
                {
                  "type": "paragraph",
                  "inlineContent": [
                    {
                      "type": "text",
                      "text": "Creating a destination image from the operation result in the same format as the source from the vImage buffer."
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "vImage provides these functions:"
            }
          ]
        },
        {
          "type": "termList",
          "items": [
            {
              "term": {
                "inlineContent": [
                  {
                    "type": "reference",
                    "isActive": true,
                    "identifier": "doc://com.apple.documentation/documentation/accelerate/1399118-vimagebuffer_initwithcgimage"
                  }
                ]
              },
              "definition": {
                "content": [
                  {
                    "type": "paragraph",
                    "inlineContent": [
                      {
                        "type": "text",
                        "text": "Initializes a vImage buffer with the contents of a Core Graphics image."
                      }
                    ]
                  }
                ]
              }
            },
            {
              "term": {
                "inlineContent": [
                  {
                    "type": "reference",
                    "isActive": true,
                    "identifier": "doc://com.apple.documentation/documentation/accelerate/1399036-vimagecreatecgimagefrombuffer"
                  }
                ]
              },
              "definition": {
                "content": [
                  {
                    "type": "paragraph",
                    "inlineContent": [
                      {
                        "type": "text",
                        "text": "Creates a Core Graphics image from a vImage buffer."
                      }
                    ]
                  }
                ]
              }
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "The following code shows a pass through function that accepts a "
            },
            {
              "type": "reference",
              "isActive": false,
              "identifier": "doc://com.apple.documentation/documentation/uikit/uiimage"
            },
            {
              "type": "text",
              "text": ", converts its underlying "
            },
            {
              "type": "reference",
              "isActive": false,
              "identifier": "doc://com.apple.documentation/documentation/coregraphics/cgimageref"
            },
            {
              "type": "text",
              "text": " image data to a vImage buffer, and returns a "
            },
            {
              "type": "reference",
              "isActive": false,
              "identifier": "doc://com.apple.documentation/documentation/uikit/uiimage"
            },
            {
              "type": "text",
              "text": " created from the buffer. In this simple example, you create a description of the Core Graphics image format from the "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/uikit/uiimage/1624147-cgimage"
            },
            {
              "type": "text",
              "text": " property of the supplied "
            },
            {
              "type": "reference",
              "isActive": false,
              "identifier": "doc://com.apple.documentation/documentation/uikit/uiimage"
            },
            {
              "type": "text",
              "text": ":"
            }
          ]
        },
        {
          "type": "codeListing",
          "code": [
            "func passThrough(sourceImage: UIImage) -> UIImage? {",
            "    guard",
            "        let sourceCGImage = sourceImage.cgImage,",
            "        let colorSpace = sourceCGImage.colorSpace else {",
            "            return nil",
            "    }",
            "",
            "    var format = vImage_CGImageFormat(",
            "        bitsPerComponent: UInt32(sourceCGImage.bitsPerComponent),",
            "        bitsPerPixel: UInt32(sourceCGImage.bitsPerPixel),",
            "        colorSpace: Unmanaged.passRetained(colorSpace),",
            "        bitmapInfo: sourceCGImage.bitmapInfo,",
            "        version: 0,",
            "        decode: nil,",
            "        renderingIntent: sourceCGImage.renderingIntent)"
          ],
          "syntax": "swift",
          "metadata": {
            "anchor": "2950491",
            "title": "Listing 1"
          }
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "The description is used by "
            },
            {
              "type": "reference",
              "isActive": false,
              "identifier": "doc://com.apple.documentation/documentation/accelerate/1399118-vimagebuffer_initwithcgimage"
            },
            {
              "type": "text",
              "text": " to initialize a vImage buffer from the image:"
            }
          ]
        },
        {
          "type": "codeListing",
          "code": [
            "    var buffer = vImage_Buffer()",
            "",
            "    vImageBuffer_InitWithCGImage(&buffer,",
            "                                 &format,",
            "                                 nil,",
            "                                 sourceCGImage,",
            "                                 vImage_Flags(kvImageNoFlags))"
          ],
          "syntax": "swift",
          "metadata": {
            "anchor": "2950492",
            "title": "Listing 2"
          }
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "Finally, "
            },
            {
              "type": "reference",
              "isActive": false,
              "identifier": "doc://com.apple.documentation/documentation/accelerate/1399036-vimagecreatecgimagefrombuffer"
            },
            {
              "type": "text",
              "text": " uses the same description to create an image from the buffer:"
            }
          ]
        },
        {
          "type": "codeListing",
          "code": [
            "    let destinationCGImage = vImageCreateCGImageFromBuffer(",
            "        &buffer,",
            "        &format,",
            "        nil,",
            "        nil,",
            "        vImage_Flags(kvImageNoFlags),",
            "        nil)",
            "    ",
            "    if let destinationCGImage = destinationCGImage {",
            "        return UIImage(cgImage: destinationCGImage.takeRetainedValue())",
            "    }",
            "    ",
            "    return nil",
            "}"
          ],
          "syntax": "swift",
          "metadata": {
            "anchor": "2948701",
            "title": "Listing 3"
          }
        },
        {
          "type": "paragraph",
          "inlineContent": []
        }
      ]
    }
