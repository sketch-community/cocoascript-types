    {
      "kind": "content",
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "This function calculates the minimum magnitude and corresonding index of the first "
            },
            {
              "type": "codeVoice",
              "code": "N"
            },
            {
              "type": "text",
              "text": " elements of "
            },
            {
              "type": "codeVoice",
              "code": "A "
            },
            {
              "type": "text",
              "text": "and writes the result to "
            },
            {
              "type": "codeVoice",
              "code": "C"
            },
            {
              "type": "text",
              "text": ":"
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "image",
              "identifier": "media-3226703",
              "metadata": {
                "anchor": "3226703",
                "title": "Figure 1"
              }
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "The index is the actual array index, not the pre-stride index. If vector A contains more than one instance of the minimum value, IC contains the index of the first instance."
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "The operation is: "
            }
          ]
        },
        {
          "type": "codeListing",
          "code": [
            "*C = -INFINITY;",
            "for (n = 0; n < N; ++n)",
            "{",
            "    if (*C < |A[n * I]|)",
            "    {",
            "        *C = |A[n * I]|;",
            "        *IC = n * I;",
            "    }",
            "}"
          ],
          "syntax": "other",
          "metadata": {
            "anchor": "3226690",
            "title": "Listing 1"
          }
        },
        {
          "type": "paragraph",
          "inlineContent": []
        }
      ]
