      "parameters": [
        {
          "name": "nz",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The number of nonzero entries in the sparse vector "
                },
                {
                  "type": "emphasis",
                  "inlineContent": [
                    {
                      "type": "text",
                      "text": "x"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": "."
                }
              ]
            }
          ]
        },
        {
          "name": "alpha",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "Scalar multiplier of "
                },
                {
                  "type": "emphasis",
                  "inlineContent": [
                    {
                      "type": "text",
                      "text": "x"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": "."
                }
              ]
            }
          ]
        },
        {
          "name": "x",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "Pointer to the dense storage for the values of the sparse vector "
                },
                {
                  "type": "emphasis",
                  "inlineContent": [
                    {
                      "type": "text",
                      "text": "x"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ". The corresponding entry in "
                },
                {
                  "type": "codeVoice",
                  "code": "indx"
                },
                {
                  "type": "text",
                  "text": " holds the index of the value. Contains "
                },
                {
                  "type": "codeVoice",
                  "code": "nz"
                },
                {
                  "type": "text",
                  "text": " values."
                }
              ]
            }
          ]
        },
        {
          "name": "indx",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "Pointer to the dense storage for the index values of the sparse vector "
                },
                {
                  "type": "emphasis",
                  "inlineContent": [
                    {
                      "type": "text",
                      "text": "x"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ". The corresponding entry in "
                },
                {
                  "type": "emphasis",
                  "inlineContent": [
                    {
                      "type": "text",
                      "text": "x"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " holds the values of the vector. Contains "
                },
                {
                  "type": "codeVoice",
                  "code": "nz"
                },
                {
                  "type": "text",
                  "text": " values."
                }
              ]
            }
          ]
        },
        {
          "name": "y",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "Pointer to the dense vector "
                },
                {
                  "type": "emphasis",
                  "inlineContent": [
                    {
                      "type": "text",
                      "text": "y"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ". Accessed as "
                },
                {
                  "type": "codeVoice",
                  "code": "y[indx[0..nz-1]*incy]"
                },
                {
                  "type": "text",
                  "text": ", so dimension must be compatible with largest index value in "
                },
                {
                  "type": "codeVoice",
                  "code": "indx"
                },
                {
                  "type": "text",
                  "text": ". The behavior of this function is undefined if this is not met. Negative strides are supported. Note, unlike dense BLAS routines, the pointer points to the last element when stride is negative."
                }
              ]
            }
          ]
        },
        {
          "name": "incy",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "Increment between valid values in the dense vector "
                },
                {
                  "type": "emphasis",
                  "inlineContent": [
                    {
                      "type": "text",
                      "text": "y"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ". Negative strides are supported."
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "kind": "content",
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "Performs the operation "
            },
            {
              "type": "emphasis",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "y = alpha * x + y"
                }
              ]
            },
            {
              "type": "text",
              "text": " in place. If "
            },
            {
              "type": "codeVoice",
              "code": "alpha"
            },
            {
              "type": "text",
              "text": " or "
            },
            {
              "type": "codeVoice",
              "code": "nz"
            },
            {
              "type": "text",
              "text": " is zero, "
            },
            {
              "type": "emphasis",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "y"
                }
              ]
            },
            {
              "type": "text",
              "text": " is unchanged."
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "Scales the sparse vector x by alpha and adds the result to the dense vector y. "
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "If the desired operation is "
            },
            {
              "type": "emphasis",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "y = alpha * x"
                }
              ]
            },
            {
              "type": "text",
              "text": ", then an efficient option is to create the "
            },
            {
              "type": "emphasis",
              "inlineContent": [
