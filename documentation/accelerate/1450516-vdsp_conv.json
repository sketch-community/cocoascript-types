          "inlineContent": [
            {
              "type": "text",
              "text": "If __"
            },
            {
              "type": "codeVoice",
              "code": "IF"
            },
            {
              "type": "text",
              "text": " is positive,  "
            },
            {
              "type": "reference",
              "isActive": false,
              "identifier": "doc://com.apple.documentation/documentation/accelerate/1450516-vdsp_conv"
            },
            {
              "type": "text",
              "text": " performs correlation. If __"
            },
            {
              "type": "codeVoice",
              "code": "IF"
            },
            {
              "type": "text",
              "text": " is negative, it performs convolution and "
            },
            {
              "type": "codeVoice",
              "code": "F"
            },
            {
              "type": "text",
              "text": " must point to the last vector element. The function can run in place, but "
            },
            {
              "type": "codeVoice",
              "code": "C"
            },
            {
              "type": "text",
              "text": " cannot be in place with "
            },
            {
              "type": "codeVoice",
              "code": "F"
            },
            {
              "type": "text",
              "text": ":"
            }
          ]
        },
        {
          "type": "codeListing",
          "code": [
            "for (n = 0; n < N; ++n)",
            "    C[n] = sum(A[n+p] * F[p], 0 <= p < P);"
          ],
