        {
          "name": "buf",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "A valid "
                },
                {
                  "type": "reference",
                  "isActive": true,
                  "identifier": "doc://com.apple.documentation/documentation/accelerate/vimage_buffer"
                },
                {
                  "type": "text",
                  "text": " structure. The fields of the structure "
                },
                {
                  "type": "codeVoice",
                  "code": "buf"
                },
                {
                  "type": "text",
                  "text": " are updated to point to a vImage buffer representation of the image. "
                }
              ]
            }
          ]
        },
        {
          "name": "format",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "A valid "
                },
                {
                  "type": "reference",
                  "isActive": true,
                  "identifier": "doc://com.apple.documentation/documentation/accelerate/vimage_cgimageformat"
                },
                {
                  "type": "text",
                  "text": " structure specifying the desired image format associated with the output "
                },
                {
                  "type": "codeVoice",
                  "code": "buf"
                },
                {
                  "type": "text",
                  "text": ". If "
                },
                {
                  "type": "codeVoice",
                  "code": "format->colorspace"
                },
                {
                  "type": "text",
                  "text": " is "
                },
                {
                  "type": "codeVoice",
                  "code": "NULL"
                },
                {
                  "type": "text",
                  "text": ", sRGB is used."
                }
              ]
            }
          ]
        },
        {
          "name": "backgroundColor",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "If the image encodes an alpha or mask, and the output format doesn't have alpha, the result is flattened against a background color."
                }
              ]
            }
          ]
        },
        {
          "name": "image",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "A "
                },
                {
                  "type": "reference",
                  "isActive": false,
                  "identifier": "doc://com.apple.documentation/documentation/coregraphics/cgimageref"
                },
                {
                  "type": "text",
                  "text": " instance to be used as the source."
                }
              ]
            }
          ]
        },
        {
          "name": "flags",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The options to use when performing this operation. The following flags are supported:"
                }
              ]
            },
            {
              "type": "table",
              "header": "none",
              "rows": [
                [
                  [
                    {
                      "type": "paragraph",
                      "inlineContent": [
                        {
                          "type": "reference",
                          "isActive": true,
                          "identifier": "doc://com.apple.documentation/documentation/accelerate/1578976-processing_flags/kvimagenoflags"
                        }
                      ]
                    }
                  ],
                  [
                    {
                      "type": "paragraph",
                      "inlineContent": [
                        {
                          "type": "text",
                          "text": "Default behavior."
                        }
                      ]
                    }
                  ]
                ],
                [
                  [
                    {
                      "type": "paragraph",
                      "inlineContent": [
                        {
                          "type": "reference",
                          "isActive": true,
                          "identifier": "doc://com.apple.documentation/documentation/accelerate/1578976-processing_flags/kvimagenoallocate"
                        }
                      ]
                    }
                  ],
                  [
                    {
                      "type": "paragraph",
                      "inlineContent": [
                        {
                          "type": "text",
                          "text": "Uses the passed-in "
                        },
                        {
                          "type": "codeVoice",
                          "code": "buf->data"
                        },
                        {
                          "type": "text",
                          "text": " and "
                        },
                        {
                          "type": "codeVoice",
                          "code": "buf->rowBytes"
                        },
                        {
                          "type": "text",
                          "text": " values without modification, allowing you to allocate your own buffer to hold the result."
                        }
                      ]
                    }
                  ]
                ],
                [
                  [
                    {
                      "type": "paragraph",
                      "inlineContent": [
                        {
                          "type": "reference",
                          "isActive": true,
                          "identifier": "doc://com.apple.documentation/documentation/accelerate/1578976-processing_flags/kvimageprintdiagnosticstoconsole"
                        }
                      ]
                    }
                  ],
                  [
                    {
                      "type": "paragraph",
                      "inlineContent": [
                        {
                          "type": "text",
                          "text": "Prints a debug message if the operation fails."
                        }
                      ]
                    }
                  ]
                ],
                [
                  [
                    {
                      "type": "paragraph",
                      "inlineContent": [
                        {
                          "type": "reference",
                          "isActive": true,
                          "identifier": "doc://com.apple.documentation/documentation/accelerate/1578976-processing_flags/kvimagedonottile"
                        }
                      ]
                    }
                  ],
                  [
                    {
                      "type": "paragraph",
                      "inlineContent": [
                        {
                          "type": "text",
                          "text": "Disables internal multithreading."
                        }
                      ]
                    }
                  ]
                ]
              ],
              "metadata": {
                "anchor": "2936448",
                "title": "Table 1"
              }
            }
          ]
        }
