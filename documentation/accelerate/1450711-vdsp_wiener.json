    {
      "kind": "content",
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "Performs the following operation:"
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "image",
              "identifier": "media-2557829",
              "metadata": {
                "anchor": "2557829",
                "title": "Figure 1"
              }
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "to solve a set of single-channel normal equations described by:"
            }
          ]
        },
        {
          "type": "codeListing",
          "code": [
            " B[n] = C[0] * A[n] + C[1] * A[n-1] +, . . . ,+ C[N-1] * A[n-N+1]",
            " for n = {0, N-1}"
          ],
          "syntax": "occ",
          "metadata": {
            "anchor": "2557700",
            "title": "Listing 1"
          }
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "where matrix "
            },
            {
              "type": "emphasis",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "A"
                }
              ]
            },
            {
              "type": "text",
              "text": " contains elements of the symmetric Toeplitz matrix shown below. This function can only be done out of place. "
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "Note that "
            },
            {
              "type": "emphasis",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "A"
                }
              ]
            },
            {
              "type": "emphasis",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "[-n]"
                }
              ]
            },
            {
              "type": "text",
              "text": " is considered to be equal to "
            },
            {
              "type": "emphasis",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "A"
                }
              ]
            },
            {
              "type": "emphasis",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "[n]"
                }
              ]
            },
            {
              "type": "text",
              "text": "."
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "codeVoice",
              "code": "vDSP_wiener"
            },
            {
              "type": "text",
              "text": " solves this set of simultaneous equations using a recursive method  described by Levinson. See Robinson, E.A., "
            },
            {
              "type": "emphasis",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "Multichannel Time Series Analysis with Digital Computer Programs"
                }
              ]
            },
            {
              "type": "text",
              "text": ".  San Francisco: Holden-Day, 1967, pp. 43-46. "
            }
          ]
        },
        {
          "type": "codeListing",
          "code": [
            " |A[0]  A[1]  A[2] ... A[N-1] |    |C[0]  |   |B[0]  |",
            " |A[1]  A[0]  A[1] ... A[N-2] |    |C[1]  |   |B[1]  |",
            " |A[2]  A[1]  A[0] ... A[N-3] |  * |C[2]  | = |B[2]  |",
            " | ...   ...   ... ... ...    |    | ...  |   | ...  |",
            " |A[N-1]A[N-2]A[N-3] ... A[0] |    |C[N-1]|   |B[N-1]|"
          ],
          "syntax": "occ",
          "metadata": {
            "anchor": "2557701",
            "title": "Listing 2"
          }
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "Typical methods for solving "
            },
            {
              "type": "emphasis",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "N"
                }
              ]
            },
            {
              "type": "text",
              "text": " equations in "
            },
            {
              "type": "emphasis",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "N"
                }
              ]
            },
            {
              "type": "text",
              "text": " unknowns have execution times  proportional to "
            },
            {
              "type": "emphasis",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "N"
                }
              ]
            },
            {
              "type": "superscript",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "3"
                }
              ]
            },
            {
              "type": "text",
              "text": ", and memory requirements proportional to "
            },
            {
              "type": "emphasis",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "N"
                }
              ]
            },
            {
              "type": "superscript",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "2"
                }
              ]
            },
            {
              "type": "text",
              "text": ".  By taking advantage of duplicate elements, the recursion method executes in a time proportional to "
            },
            {
              "type": "emphasis",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "N"
                }
              ]
            },
            {
              "type": "superscript",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "2"
                }
              ]
            },
            {
              "type": "text",
              "text": " and requires memory proportional to "
            },
            {
              "type": "emphasis",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "N"
                }
              ]
            },
            {
              "type": "text",
              "text": ". The  Wiener-Levinson algorithm recursively builds a solution by computing the "
            },
            {
              "type": "emphasis",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "m+1"
                }
              ]
            },
            {
              "type": "text",
              "text": "  matrix solution from the "
            },
            {
              "type": "emphasis",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "m"
                }
              ]
            },
            {
              "type": "text",
              "text": " matrix solution."
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "With successful completion,"
            },
            {
              "type": "codeVoice",
              "code": "vDSP_wiener"
            },
            {
              "type": "text",
              "text": " returns zero in error flag "
            },
            {
              "type": "codeVoice",
              "code": "IERR"
            },
            {
              "type": "text",
              "text": ". If "
            },
            {
              "type": "codeVoice",
              "code": "vDSP_wiener"
            },
            {
              "type": "text",
              "text": " fails, "
            },
            {
              "type": "codeVoice",
              "code": "IERR"
            },
            {
              "type": "text",
              "text": " indicates in which pass the failure occurred."
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "The solution, left in "
            },
            {
              "type": "emphasis",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "F"
                }
              ]
            },
            {
              "type": "text",
              "text": ", can be used as a Wiener filter."
            }
          ]
        }
      ]
    }
