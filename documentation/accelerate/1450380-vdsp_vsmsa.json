    {
      "kind": "content",
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "This function calculates the products of the first "
            },
            {
              "type": "codeVoice",
              "code": "N"
            },
            {
              "type": "text",
              "text": " elements of "
            },
            {
              "type": "codeVoice",
              "code": "A"
            },
            {
              "type": "text",
              "text": " and the scalar value "
            },
            {
              "type": "codeVoice",
              "code": "B"
            },
            {
              "type": "text",
              "text": ", adds each product to the scalar value "
            },
            {
              "type": "codeVoice",
              "code": "C"
            },
            {
              "type": "text",
              "text": ", and writes the result to "
            },
            {
              "type": "codeVoice",
              "code": "D"
            },
            {
              "type": "text",
              "text": ":"
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "image",
              "identifier": "media-3110577",
              "metadata": {
                "anchor": "3110577",
                "title": "Figure 1"
              }
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "The operation is:"
            }
          ]
        },
        {
          "type": "codeListing",
          "code": [
            "for (n = 0; n < N; ++n)",
            "    D[n] = A[n]*B + C;"
          ],
          "syntax": "swift",
          "metadata": {
            "anchor": "3108885",
            "title": "Listing 1"
          }
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "The following code shows an example of using "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/accelerate/1450380-vdsp_vsmsa"
            },
            {
              "type": "text",
              "text": ":"
            }
          ]
        },
        {
          "type": "codeListing",
          "code": [
            "let a: [Float] = [1, 2, 4, 5]",
            "var b: Float = 2",
            "var c: Float = 100",
            "",
            "var d = [Float](repeating: 0,",
            "                count: a.count)",
            "",
            "let stride = vDSP_Stride(1)",
            "let n = vDSP_Length(a.count)",
            "",
            "vDSP_vsmsa(a, stride,",
            "           &b,",
            "           &c,",
            "           &d, stride,",
            "           n)",
            "",
            "// Prints \"[102.0, 104.0, 108.0, 110.0]\"",
            "print(d)"
          ],
          "syntax": "swift",
          "metadata": {
            "anchor": "3213808",
            "title": "Listing 2"
          }
        },
        {
          "type": "paragraph",
          "inlineContent": []
        }
