    {
      "kind": "content",
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "The operation terminates iterations if a computed estimate of "
            },
            {
              "type": "codeVoice",
              "code": "cond(Abar)"
            },
            {
              "type": "text",
              "text": " exceeds this value. This is to prevent certain small or zero singular values of "
            },
            {
              "type": "emphasis",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "A"
                }
              ]
            },
            {
              "type": "text",
              "text": " or "
            },
            {
              "type": "emphasis",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "Abar"
                }
              ]
            },
            {
              "type": "text",
              "text": " from coming into effect and causing unwanted growth in the computed solution."
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "You can use "
            },
            {
              "type": "reference",
              "isActive": false,
              "identifier": "doc://com.apple.documentation/documentation/accelerate/sparselsmroptions/2875488-conditionlimit"
            },
            {
              "type": "text",
              "text": " and "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/accelerate/sparselsmroptions/2875486-lambda"
            },
            {
              "type": "text",
              "text": " separately or together to regularize ill-conditioned systems."
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "Normally, "
            },
            {
              "type": "reference",
              "isActive": false,
              "identifier": "doc://com.apple.documentation/documentation/accelerate/sparselsmroptions/2875488-conditionlimit"
            },
            {
              "type": "text",
              "text": " is in the range "
            },
            {
              "type": "codeVoice",
              "code": "1000"
            },
            {
              "type": "text",
              "text": " to "
            },
            {
              "type": "codeVoice",
              "code": "1/eps"
            },
            {
              "type": "text",
              "text": ". "
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "Suggested value: "
            },
            {
              "type": "reference",
              "isActive": false,
              "identifier": "doc://com.apple.documentation/documentation/accelerate/sparselsmroptions/2875488-conditionlimit"
            },
            {
              "type": "text",
              "text": " "
            },
            {
              "type": "codeVoice",
              "code": "= 1/(100*eps)"
            },
            {
              "type": "text",
              "text": "  for compatible systems, "
            },
            {
              "type": "reference",
              "isActive": false,
              "identifier": "doc://com.apple.documentation/documentation/accelerate/sparselsmroptions/2875488-conditionlimit"
            },
            {
              "type": "text",
              "text": " "
            },
            {
              "type": "codeVoice",
              "code": "= 1/(10*sqrt(eps))"
            },
            {
              "type": "text",
              "text": " for least squares"
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": []
        }
      ]
    }
