    {
      "kind": "content",
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "This function subtracts the the first "
            },
            {
              "type": "codeVoice",
              "code": "N"
            },
            {
              "type": "text",
              "text": " elements of "
            },
            {
              "type": "codeVoice",
              "code": "A"
            },
            {
              "type": "text",
              "text": " from "
            },
            {
              "type": "codeVoice",
              "code": "B"
            },
            {
              "type": "text",
              "text": ", multiplies the differences by the scalar value "
            },
            {
              "type": "codeVoice",
              "code": "C"
            },
            {
              "type": "text",
              "text": ", and writes the result to "
            },
            {
              "type": "codeVoice",
              "code": "D"
            },
            {
              "type": "text",
              "text": ":"
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "image",
              "identifier": "media-3110572",
              "metadata": {
                "anchor": "3110572",
                "title": "Figure 1"
              }
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "The operation is:"
            }
          ]
        },
        {
          "type": "codeListing",
          "code": [
            " for (n = 0; n < N; ++n)",
            "    D[n] = (A[n] - B[n]) * C;"
          ],
          "syntax": "swift",
          "metadata": {
            "anchor": "3108807",
            "title": "Listing 1"
          }
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "The following code shows an example of using "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/accelerate/1450734-vdsp_vsbsm"
            },
            {
              "type": "text",
              "text": ":"
            }
          ]
        },
        {
          "type": "codeListing",
          "code": [
            "let stride = vDSP_Stride(1)",
            "",
            "let a: [Float] = [10, 20, 30, 40, 50]",
            "let b: [Float] = [ 1,  2,  3,  4,  5]",
            "",
            "var c: Float = 2",
            "",
            "let n = vDSP_Length(a.count)",
            "",
            "var d = [Float](repeating: 0,",
            "                count: a.count)",
            "",
            "vDSP_vsbsm(a, stride,",
            "           b, stride,",
            "           &c,",
            "           &d, stride,",
            "           n)",
            "",
            "// Prints \"[18.0, 36.0, 54.0, 72.0, 90.0]\"",
            "print(d)"
          ],
          "syntax": "swift",
          "metadata": {
            "anchor": "3108806",
            "title": "Listing 2"
          }
        },
