    {
      "kind": "content",
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "This function scales vector "
            },
            {
              "type": "codeVoice",
              "code": "A"
            },
            {
              "type": "text",
              "text": " by the scalar "
            },
            {
              "type": "codeVoice",
              "code": "*B"
            },
            {
              "type": "text",
              "text": " and converts each resulting value to a signed 24-bit integer, placing the results in "
            },
            {
              "type": "codeVoice",
              "code": "C"
            },
            {
              "type": "text",
              "text": ".  Values (after scaling) that are outside the range that can be represented by signed 24-bit integers are clamped to the largest or smallest representable values."
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "This function performs the following operations:"
            }
          ]
        },
        {
          "type": "codeListing",
          "code": [
            "    for (n = 0; n < N; ++n)",
            "    {",
            "        if     (A[n*IA] * *B < INT24_MIN)",
            "            C[n*IC] = INT24_MIN",
            "        else if (A[n*IA] * *B > INT24_MAX)",
            "            C[n*IC] = INT24_MAX",
            "        else",
            "            C[n*IC] = (int24)(A[n*IA] * *B);",
            "    }"
          ],
          "syntax": "occ",
          "metadata": {
            "anchor": "2557709",
            "title": "Listing 1"
          }
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "In this pseudocode, "
            },
            {
              "type": "codeVoice",
              "code": "INT24_MIN"
            },
            {
              "type": "text",
              "text": " is equal to "
            },
            {
              "type": "codeVoice",
              "code": "-(2^23)"
            },
            {
              "type": "text",
              "text": ", and "
            },
            {
              "type": "codeVoice",
              "code": "INT24_MAX"
            },
            {
              "type": "text",
              "text": " is equal to "
            },
            {
              "type": "codeVoice",
              "code": "2^23 - 1"
            },
            {
              "type": "text",
              "text": "."
            }
          ]
        }
      ]
