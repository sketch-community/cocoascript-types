      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "Performs the following operation:"
            }
          ]
        },
        {
          "type": "codeListing",
          "code": [
            "for (n = 0; n < N; ++n){",
            "    if (A[n*IA] >= *B)",
            "        D[n*Id] = *C;",
            "    else",
            "        D[n*Id] = -*C;",
            "}"
          ],
          "syntax": "occ",
          "metadata": {
            "anchor": "2557672",
            "title": "Listing 1"
          }
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "Creates vector "
            },
            {
              "type": "codeVoice",
              "code": "D"
            },
            {
              "type": "text",
              "text": " using the plus or minus value of scalar "
            },
            {
              "type": "codeVoice",
              "code": "*C"
            },
            {
              "type": "text",
              "text": ". The sign of  the output element is determined by comparing input from vector "
            },
            {
              "type": "codeVoice",
              "code": "A"
            },
            {
              "type": "text",
              "text": " with  threshold scalar "
            },
            {
              "type": "codeVoice",
              "code": "*B"
            },
            {
              "type": "text",
              "text": ". For input values less than "
            },
            {
              "type": "codeVoice",
              "code": "*B"
            },
            {
              "type": "text",
              "text": ", the negated value of "
            },
            {
              "type": "codeVoice",
              "code": "*C"
            },
            {
              "type": "text",
              "text": " is written to vector "
            },
            {
              "type": "codeVoice",
              "code": "D"
            },
            {
              "type": "text",
              "text": ".  For input values greater than or equal to "
            },
            {
              "type": "codeVoice",
              "code": "*B"
            },
            {
              "type": "text",
              "text": ", "
            },
            {
              "type": "codeVoice",
              "code": "*C"
            },
            {
              "type": "text",
              "text": " is copied to vector "
            },
            {
              "type": "codeVoice",
              "code": "D"
            },
            {
              "type": "text",
              "text": ". "
            }
          ]
        }
      ]
    }
