        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "When you create an instance of "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/cloudkit/ckshare"
            },
            {
              "type": "text",
              "text": " for sharing a record zone, CloudKit automatically assigns this constant as the "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/cloudkit/ckrecordid/1500973-recordname"
            },
            {
              "type": "text",
              "text": " element of the share recordâ€™s "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/cloudkit/ckrecord/1462229-recordid"
            },
            {
              "type": "text",
              "text": ". After you save the share record to iCloud, you can fetch it by reconstructing the record ID using this constant, as the following example shows:"
            }
          ]
        },
        {
          "type": "codeListing",
          "code": [
            "func fetchShare(forZone zone: CKRecordZone,",
            "                completion: @escaping (Result<CKShare, Error>) -> Void) {",
            "    let database = CKContainer.default().privateCloudDatabase",
            "        ",
            "    // Use the 'CKRecordNameZoneWideShare' constant to create the record ID.",
            "    let recordID = CKRecord.ID(recordName: CKRecordNameZoneWideShare,",
            "                               zoneID: zone.zoneID)",
            "        ",
            "    // Fetch the share record from the specified record zone.",
            "    database.fetch(withRecordID: recordID) { share, error in",
            "        if let error = error {",
            "            // If the fetch fails, inform the caller.",
            "            completion(.failure(error))",
            "        } else if let share = share as? CKShare {",
            "            // Otherwise, pass the fetched share record to the",
            "            // completion handler.",
            "            completion(.success(share))",
            "        } else {",
            "            fatalError(\"Unable to fetch record with ID: \\(recordID)\")",
            "        }",
            "    }",
            "}"
          ],
          "syntax": "swift",
