          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The ownership options to use for the records. If you specify the "
                },
                {
                  "type": "reference",
                  "isActive": true,
                  "identifier": "doc://com.apple.documentation/documentation/cloudkit/ckrecord_reference_action/deleteself"
                },
                {
                  "type": "text",
                  "text": " option, the object that the "
                },
                {
                  "type": "codeVoice",
                  "code": "recordID"
                },
                {
                  "type": "text",
                  "text": " parameter references becomes the owner of (or acts as the parent of) any objects that use this reference object. For a list of possible values, see "
                },
                {
                  "type": "reference",
                  "isActive": true,
                  "identifier": "doc://com.apple.documentation/documentation/cloudkit/ckrecord_reference_action"
                },
                {
                  "type": "text",
                  "text": ". "
                }
              ]
            }
          ]
        }
      ]
    },
