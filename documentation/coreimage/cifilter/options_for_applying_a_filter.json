    "doc://com.apple.documentation/documentation/coreimage/kciapplyoptionextent": {
      "title": "kCIApplyOptionExtent",
      "type": "topic",
      "identifier": "doc://com.apple.documentation/documentation/coreimage/kciapplyoptionextent",
      "kind": "symbol",
      "role": "symbol",
      "url": "/documentation/coreimage/kciapplyoptionextent",
      "abstract": [
        {
          "type": "text",
          "text": "The size of the produced image. The associated value is a four-element array ("
        },
        {
          "type": "reference",
          "isActive": true,
          "identifier": "doc://com.apple.documentation/documentation/foundation/nsarray"
        },
        {
          "type": "text",
          "text": ") that specifies the x-value of the rectangle origin, the y-value of the rectangle origin, and the width and height."
        }
      ]
    },
    "doc://com.apple.documentation/documentation/coreimage/kciapplyoptiondefinition": {
      "title": "kCIApplyOptionDefinition",
      "type": "topic",
      "identifier": "doc://com.apple.documentation/documentation/coreimage/kciapplyoptiondefinition",
      "kind": "symbol",
      "role": "symbol",
      "url": "/documentation/coreimage/kciapplyoptiondefinition",
      "abstract": [
        {
          "type": "text",
          "text": "The domain of definition (DOD) of the produced image. The associated value is either a Core Image filter shape or a four-element array ("
        },
        {
          "type": "reference",
          "isActive": true,
          "identifier": "doc://com.apple.documentation/documentation/foundation/nsarray"
        },
        {
          "type": "text",
          "text": ") that specifies a rectangle."
        }
      ]
    },
    "doc://com.apple.documentation/documentation/coreimage/kciapplyoptionuserinfo": {
      "title": "kCIApplyOptionUserInfo",
      "type": "topic",
      "identifier": "doc://com.apple.documentation/documentation/coreimage/kciapplyoptionuserinfo",
      "kind": "symbol",
      "role": "symbol",
      "url": "/documentation/coreimage/kciapplyoptionuserinfo",
      "abstract": [
        {
          "type": "text",
          "text": "Information needed by a callback. The associated value is an object that Core Image will pass to any callbacks invoked for that filter."
        }
      ]
    },
    "doc://com.apple.documentation/documentation/coreimage/kciapplyoptioncolorspace": {
      "title": "kCIApplyOptionColorSpace",
      "type": "topic",
      "identifier": "doc://com.apple.documentation/documentation/coreimage/kciapplyoptioncolorspace",
      "kind": "symbol",
      "role": "symbol",
      "url": "/documentation/coreimage/kciapplyoptioncolorspace",
      "abstract": [
        {
          "type": "text",
          "text": "The color space of the produced image. The associated value must be an RGB "
        },
        {
          "type": "reference",
          "isActive": true,
          "identifier": "doc://com.apple.documentation/documentation/coregraphics/cgcolorspaceref"
        },
        {
          "type": "text",
          "text": " object. If not specified, the output of the kernel is in the working color space of the Core Image context used to render the image."
        }
      ]
    },
