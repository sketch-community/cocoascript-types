      "kind": "content",
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "This method applies a Gaussian blur filter to an image. The effect targets the pixels within a circle defined by a "
            },
            {
              "type": "codeVoice",
              "code": "radius"
            },
            {
              "type": "text",
              "text": " and uses Gaussian ditribution to blur the image from the center out. "
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "The Gaussian blur filter uses the following properties:"
            }
          ]
        },
        {
          "type": "termList",
          "items": [
            {
              "term": {
                "inlineContent": [
                  {
                    "type": "codeVoice",
                    "code": "radius"
                  }
                ]
              },
              "definition": {
                "content": [
                  {
                    "type": "paragraph",
                    "inlineContent": [
                      {
                        "type": "text",
                        "text": "A "
                      },
                      {
                        "type": "codeVoice",
                        "code": "float"
                      },
                      {
                        "type": "text",
                        "text": " representing the area of effect as an "
                      },
                      {
                        "type": "reference",
                        "isActive": true,
                        "identifier": "doc://com.apple.documentation/documentation/foundation/nsnumber"
                      },
                      {
                        "type": "text",
                        "text": "."
                      }
                    ]
                  }
                ]
              }
            },
            {
              "term": {
                "inlineContent": [
                  {
                    "type": "codeVoice",
                    "code": "inputImage"
                  }
                ]
              },
              "definition": {
                "content": [
                  {
                    "type": "paragraph",
                    "inlineContent": [
                      {
                        "type": "text",
                        "text": "A "
                      },
                      {
                        "type": "reference",
                        "isActive": true,
                        "identifier": "doc://com.apple.documentation/documentation/coreimage/ciimage"
                      },
                      {
                        "type": "text",
                        "text": " representing the input image to apply the filter to."
                      }
                    ]
                  }
                ]
              }
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "The following code creates a filter that adds a heavy blur to the input image:"
            }
          ]
        },
        {
          "type": "codeListing",
          "code": [
            "    func gaussianBlur(inputImage: CIImage) -> CIImage? {",
            "",
            "        let gaussianBlurFilter = CIFilter.gaussianBlur()",
            "        gaussianBlurFilter.inputImage = inputImage",
            "        gaussianBlurFilter.radius = 10",
            "        return gaussianBlurFilter.outputImage",
            "    }"
          ],
          "syntax": "swift",
