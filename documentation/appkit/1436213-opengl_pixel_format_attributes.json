      "kind": "symbol",
      "role": "symbol",
      "url": "/documentation/appkit/1436213-opengl_pixel_format_attributes/nsopenglpfaacceleratedcompute",
      "abstract": [
        {
          "type": "text",
          "text": "If present, this attribute indicates that only renderers that can execute OpenCL programs should be used."
        }
      ],
      "deprecated": true
    },
    "doc://com.apple.documentation/documentation/appkit/1436213-opengl_pixel_format_attributes/nsopenglpfaaccumsize": {
      "title": "NSOpenGLPFAAccumSize",
      "type": "topic",
      "identifier": "doc://com.apple.documentation/documentation/appkit/1436213-opengl_pixel_format_attributes/nsopenglpfaaccumsize",
      "kind": "symbol",
