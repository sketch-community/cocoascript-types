    "doc://com.apple.documentation/documentation/appkit/1436213-opengl_pixel_format_attributes/nsopenglpfaaccelerated": {
      "title": "NSOpenGLPFAAccelerated",
      "type": "topic",
      "identifier": "doc://com.apple.documentation/documentation/appkit/1436213-opengl_pixel_format_attributes/nsopenglpfaaccelerated",
      "kind": "symbol",
      "role": "symbol",
      "url": "/documentation/appkit/1436213-opengl_pixel_format_attributes/nsopenglpfaaccelerated",
      "abstract": [
        {
          "type": "text",
          "text": "A Boolean attribute. If present, this attribute indicates that only hardware-accelerated renderers are considered. If not present, accelerated renderers are still preferred."
        }
      ],
      "deprecated": true
    },
    "doc://com.apple.documentation/documentation/appkit/1436213-opengl_pixel_format_attributes/nsopenglpfaacceleratedcompute": {
      "title": "NSOpenGLPFAAcceleratedCompute",
      "type": "topic",
