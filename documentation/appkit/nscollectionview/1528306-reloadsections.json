              "inlineContent": [
                {
                  "type": "text",
                  "text": "The indexes of the sections that you want to reload. Specifying "
                },
                {
                  "type": "codeVoice",
                  "code": "nil"
                },
                {
                  "type": "text",
                  "text": " for this parameter raises an exception."
                }
              ]
            }
