        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "When the value of this property is "
            },
            {
              "type": "reference",
              "isActive": false,
              "identifier": "doc://com.apple.documentation/documentation/objectivec/yes"
            },
            {
              "type": "text",
              "text": ", the scroll view cell fills the background with its background color. "
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "If the scroll view encloses an "
            },
            {
              "type": "codeVoice",
              "code": "NSClipView"
            },
            {
              "type": "text",
              "text": ", setting this property to "
            },
            {
              "type": "reference",
              "isActive": false,
              "identifier": "doc://com.apple.documentation/documentation/objectivec/no"
            },
            {
              "type": "text",
              "text": " also sets the "
            },
            {
              "type": "codeVoice",
              "code": "NSClipView"
            },
            {
              "type": "text",
              "text": " property "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/appkit/nsclipview/1532142-copiesonscroll"
            },
            {
              "type": "text",
              "text": " to "
            },
            {
              "type": "reference",
              "isActive": false,
              "identifier": "doc://com.apple.documentation/documentation/objectivec/no"
            },
            {
              "type": "text",
              "text": ". The side effect of setting "
            },
            {
              "type": "codeVoice",
              "code": "drawsBackground"
            },
            {
              "type": "text",
              "text": " directly on the "
            },
            {
              "type": "codeVoice",
              "code": "NSClipView"
            },
            {
              "type": "text",
              "text": " instead is the appearance of “trails” (vestiges of previous drawing) in the document view as it is scrolled."
            }
          ]
        }
