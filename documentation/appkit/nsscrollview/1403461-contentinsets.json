      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "When the value of this property is equal to "
            },
            {
              "type": "codeVoice",
              "code": "NSEdgeInsetsZero"
            },
            {
              "type": "text",
              "text": ", traditional tiling is performed. Rulers, headers, and other subviews are tiled with the "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/appkit/nsscrollview/1403547-contentview"
            },
            {
              "type": "text",
              "text": " frame filling the remaining space. When the value of this property is not equal to "
            },
            {
              "type": "codeVoice",
              "code": "NSEdgeInsetsZero"
            },
            {
              "type": "text",
              "text": ", the rulers, headers, and other subviews are inset as specified. The "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/appkit/nsscrollview/1403547-contentview"
            },
            {
              "type": "text",
              "text": " is placed underneath these sibling views and is only inset by the scroll view border and non-overlay scrollers. "
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "See "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/foundation/nsedgeinsets"
            },
            {
              "type": "text",
              "text": " for possible values."
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "When the value of the "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/appkit/nsscrollview/1403502-automaticallyadjustscontentinset"
            },
            {
              "type": "text",
              "text": " property is "
            },
            {
              "type": "reference",
              "isActive": false,
              "identifier": "doc://com.apple.documentation/documentation/objectivec/yes"
            },
            {
              "type": "text",
              "text": ", any value of this property is overridden during tiling."
            }
          ]
        }
      ]
    }
