      "kind": "content",
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "Floating subviews of the document view do not scroll like the rest of the document. Instead these views appear to float over the document. For example, see "
            },
            {
              "type": "codeVoice",
              "code": "NSTableView"
            },
            {
              "type": "text",
              "text": " floating group rows ("
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/appkit/nstableview/1528624-floatsgrouprows"
            },
            {
              "type": "text",
              "text": ")."
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "codeVoice",
              "code": "NSScrollView"
            },
            {
              "type": "text",
              "text": " ensures that any scrolling on the non-floating axis is performed visually synchronously with the document content. "
            }
          ]
        },
        {
          "type": "aside",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "You are responsible for keeping track of the floating views and removing them via "
                },
                {
                  "type": "reference",
                  "isActive": true,
                  "identifier": "doc://com.apple.documentation/documentation/appkit/nsview/1483265-removefromsuperview"
                },
                {
                  "type": "text",
                  "text": " when they should no longer float."
                }
              ]
            }
          ],
          "style": "note",
          "name": "Note"
        }
      ]
    }
