    {
      "kind": "content",
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "A constant describing the type of border. Border types are defined in "
            },
            {
              "type": "codeVoice",
              "code": "NSView.h"
            },
            {
              "type": "text",
              "text": ". Currently, the following border types are defined: "
            },
            {
              "type": "codeVoice",
              "code": "NSNoBorder"
            },
            {
              "type": "text",
              "text": ","
            },
            {
              "type": "codeVoice",
              "code": "NSLineBorder"
            },
            {
              "type": "text",
              "text": ","
            },
            {
              "type": "codeVoice",
              "code": "NSBezelBorder"
            },
            {
              "type": "text",
              "text": ", "
            },
            {
              "type": "codeVoice",
              "code": "NSGrooveBorder"
            },
            {
              "type": "text",
              "text": "."
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "By default, the border type of an "
            },
            {
              "type": "codeVoice",
              "code": "NSBox"
            },
            {
              "type": "text",
              "text": " is "
            },
            {
              "type": "codeVoice",
              "code": "NSGrooveBorder"
            },
            {
              "type": "text",
              "text": "."
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "If the size of the new border is different from that of the old border, the content view is resized to absorb the difference, and the box is marked for redisplay."
            }
          ]
        }
      ]
    }
