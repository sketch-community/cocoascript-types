          "inlineContent": [
            {
              "type": "codeVoice",
              "code": "NSTextView"
            },
            {
              "type": "text",
              "text": " posts this notification whenever "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/appkit/nstextview/1449462-setselectedrange"
            },
            {
              "type": "text",
              "text": " is invoked, either directly or through the many methods ("
