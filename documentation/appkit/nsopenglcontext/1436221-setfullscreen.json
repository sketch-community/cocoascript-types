    {
      "kind": "content",
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "In full-screen mode, the receiver renders onto the entire screen. The receiver’s viewport is set to the full size of the screen. Call the "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/appkit/nsopenglcontext/1436114-cleardrawable"
            },
            {
              "type": "text",
              "text": " method to exit full-screen mode."
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "The "
            },
            {
              "type": "codeVoice",
              "code": "NSOpenGLPFAFullScreen"
            },
            {
              "type": "text",
              "text": " attribute must have been specified in the receiver’s "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/appkit/nsopenglpixelformat"
            },
            {
              "type": "text",
              "text": ". Some OpenGL renderers, like the software renderer, do not support full-screen mode. The following code determines if a full-screen pixel format is possible on a given system:"
            }
          ]
        },
        {
          "type": "codeListing",
          "code": [
            "NSOpenGLPixelFormatAttribute attrs[] =",
            "{",
            "    NSOpenGLPFAFullScreen,",
            "    nil",
            "};",
            " ",
            "NSOpenGLPixelFormat* pixFmt = [[NSOpenGLPixelFormat alloc] initWithAttributes:attrs];",
            " ",
            "/* Check if initWithAttributes succeeded. */",
            "if(pixFmt == nil) {",
            "    /* initWithAttributes failed. There is no full-screen renderer.  */",
            "}"
          ],
          "syntax": "occ",
          "metadata": {
            "anchor": "2555733",
            "title": "Listing 1"
          }
        },
        {
          "type": "aside",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "Use Core Graphics’s "
                },
                {
                  "type": "strong",
                  "inlineContent": [
                    {
                      "type": "text",
                      "text": "Direct Display"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " API to capture the display before entering full-screen mode and release it after exiting. A captured display prevents contention from other applications and system services. In addition, applications are not notified of display changes, preventing them from repositioning their windows and the Finder from repositioning desktop icons."
                }
              ]
            }
          ],
          "style": "note",
          "name": "Note"
        }
      ]
    }
