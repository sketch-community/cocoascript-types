      "parameters": [
        {
          "name": "newRight",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "Returns by indirection a new "
                },
                {
                  "type": "reference",
                  "isActive": true,
                  "identifier": "doc://com.apple.documentation/documentation/coregraphics/cgfloat"
                },
                {
                  "type": "text",
                  "text": " value for the right edge of the pending page rectangle in the view's coordinate system."
                }
              ]
            }
          ]
        },
        {
          "name": "oldLeft",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "A "
                },
                {
                  "type": "reference",
                  "isActive": false,
                  "identifier": "doc://com.apple.documentation/documentation/coregraphics/cgfloat"
                },
                {
                  "type": "text",
                  "text": " value that sets the left edge of the pending page rectangle in the view’s coordinate system. "
                }
              ]
            }
          ]
        },
        {
          "name": "oldRight",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "A "
                },
                {
                  "type": "reference",
                  "isActive": false,
                  "identifier": "doc://com.apple.documentation/documentation/coregraphics/cgfloat"
                },
                {
                  "type": "text",
                  "text": " value that sets the right edge of the pending page rectangle in the view’s coordinate system. "
                }
              ]
            }
          ]
        },
        {
          "name": "rightLimit",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The leftmost "
                },
                {
                  "type": "reference",
                  "isActive": false,
                  "identifier": "doc://com.apple.documentation/documentation/coregraphics/cgfloat"
                },
                {
                  "type": "text",
                  "text": " value "
                },
                {
                  "type": "codeVoice",
                  "code": "newRight"
                },
                {
                  "type": "text",
                  "text": " can be set to, as calculated using the value of the "
                },
                {
                  "type": "reference",
                  "isActive": true,
                  "identifier": "doc://com.apple.documentation/documentation/appkit/nsview/1483392-widthadjustlimit"
                },
                {
                  "type": "text",
                  "text": " property."
                }
              ]
            }
          ]
        }
