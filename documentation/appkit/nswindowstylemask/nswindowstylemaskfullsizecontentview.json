{
  "abstract": [
    {
      "type": "text",
      "text": "When set, the window’s "
    },
    {
      "type": "reference",
      "isActive": true,
      "identifier": "doc://com.apple.documentation/documentation/appkit/nswindow/1419160-contentview"
    },
    {
      "type": "text",
      "text": " consumes the full size of the window. Although you can combine this constant with other window style masks, it is respected only for windows with a title bar. Note that using this mask opts in to layer-backing. Use the "
    },
    {
      "type": "reference",
      "isActive": true,
      "identifier": "doc://com.apple.documentation/documentation/appkit/nswindow/1419124-contentlayoutrect"
    },
    {
      "type": "text",
      "text": " or the "
    },
    {
      "type": "reference",
      "isActive": true,
      "identifier": "doc://com.apple.documentation/documentation/appkit/nswindow/1419094-contentlayoutguide"
    },
    {
      "type": "text",
      "text": " to lay out views underneath the title bar–toolbar area."
    }
  ],
