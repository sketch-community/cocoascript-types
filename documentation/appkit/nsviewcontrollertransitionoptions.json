      "kind": "symbol",
      "role": "symbol",
      "url": "/documentation/appkit/nsviewcontrollertransitionoptions/nsviewcontrollertransitionslideleft",
      "abstract": [
        {
          "type": "text",
          "text": "A transition animation that slides the old view to the left while the new view slides into view from the right. In other words, both views slide to the left."
        }
      ]
    },
    "doc://com.apple.documentation/documentation/appkit/nsviewcontrollertransitionoptions/nsviewcontrollertransitionslideright": {
      "title": "NSViewControllerTransitionSlideRight",
