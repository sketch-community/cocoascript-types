      "kind": "symbol",
      "role": "symbol",
      "url": "/documentation/appkit/nsviewcontrollertransitionoptions/nsviewcontrollertransitionnone",
      "abstract": [
        {
          "type": "text",
          "text": "A transition with no animation (the default). Specifying another animation option from this enumeration overrides this option."
        }
      ]
    },
    "doc://com.apple.documentation/documentation/appkit/nsviewcontrollertransitionoptions/nsviewcontrollertransitioncrossfade": {
      "title": "NSViewControllerTransitionCrossfade",
      "type": "topic",
      "identifier": "doc://com.apple.documentation/documentation/appkit/nsviewcontrollertransitionoptions/nsviewcontrollertransitioncrossfade",
      "kind": "symbol",
      "role": "symbol",
      "url": "/documentation/appkit/nsviewcontrollertransitionoptions/nsviewcontrollertransitioncrossfade",
      "abstract": [
        {
          "type": "text",
          "text": "A transition animation that fades the new view in and simultaneously fades the old view out. You can combine this animation option with any of the “slide” options in this enumeration. "
        }
      ]
    },
    "doc://com.apple.documentation/documentation/appkit/nsviewcontrollertransitionoptions/nsviewcontrollertransitionslideup": {
      "title": "NSViewControllerTransitionSlideUp",
      "type": "topic",
      "identifier": "doc://com.apple.documentation/documentation/appkit/nsviewcontrollertransitionoptions/nsviewcontrollertransitionslideup",
      "kind": "symbol",
      "role": "symbol",
      "url": "/documentation/appkit/nsviewcontrollertransitionoptions/nsviewcontrollertransitionslideup",
      "abstract": [
        {
          "type": "text",
          "text": "A transition animation that slides the old view up while the new view comes into view from the bottom.  In other words, both views slide up."
        }
      ]
    },
    "doc://com.apple.documentation/documentation/appkit/nsviewcontrollertransitionoptions/nsviewcontrollertransitionslidedown": {
      "title": "NSViewControllerTransitionSlideDown",
      "type": "topic",
