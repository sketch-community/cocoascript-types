      ],
      "parameters": [
        {
          "name": "family",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The generic name of the desired font, such as Times or Helvetica."
                }
              ]
            }
          ]
        },
        {
          "name": "fontTraitMask",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The font traits, specified by combining the font trait mask values described in "
                },
                {
                  "type": "codeVoice",
                  "code": "Constants"
                },
                {
                  "type": "text",
                  "text": " using the C bitwise OR operator. Using "
                },
                {
                  "type": "codeVoice",
                  "code": "NSUnboldFontMask"
                },
                {
                  "type": "text",
                  "text": " or "
                },
                {
                  "type": "codeVoice",
                  "code": "NSUnitalicFontMask"
                },
                {
                  "type": "text",
                  "text": " loads a font that doesn’t have either the bold or italic trait, respectively."
                }
              ]
            }
          ]
        },
        {
          "name": "weight",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "A hint for the weight desired, on a scale of 0 to 15: a value of 5 indicates a normal or book weight, and 9 or more a bold or heavier weight. The weight is ignored if "
                },
                {
                  "type": "codeVoice",
                  "code": "fontTraitMask"
                },
                {
                  "type": "text",
                  "text": " includes "
                },
                {
                  "type": "codeVoice",
                  "code": "NSBoldFontMask"
                },
                {
                  "type": "text",
                  "text": "."
                }
              ]
            }
          ]
        },
        {
          "name": "size",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The point size of the desired font."
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "kind": "content",
      "content": [
        {
          "anchor": "return_value",
          "level": 2,
          "text": "Return Value",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "A font with the specified characteristics if successful, or "
            },
            {
              "type": "codeVoice",
              "code": "nil"
            },
            {
              "type": "text",
              "text": " if not."
            }
          ]
        }
      ]
