      "content": [
        {
          "anchor": "overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "The typesetter decides which way text should flow and passes these values as arguments to the text container, which uses them to calculate the next line rectangle."
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "Line sweep is the direction text progresses within a line. See "
            },
            {
              "type": "link",
              "title": "Text System Storage Layer Overview",
              "destination": "https://developer.apple.com/library/archive/documentation/Cocoa/Conceptual/TextStorageLayer/TextStorageLayer.html#//apple_ref/doc/uid/10000087i"
            },
            {
              "type": "text",
              "text": "."
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "The only values currently used by the supplied typesetters are "
            },
            {
              "type": "codeVoice",
              "code": "NSLineSweepRight"
            },
            {
              "type": "text",
              "text": " and "
            },
            {
              "type": "codeVoice",
              "code": "NSLineMovesDown"
            },
            {
              "type": "text",
              "text": ". An "
            },
            {
              "type": "codeVoice",
              "code": "NSTextContainer"
            },
            {
              "type": "text",
              "text": " subclass should be able to deal with any value, and an "
            },
            {
              "type": "codeVoice",
              "code": "NSTypesetter"
            },
            {
              "type": "text",
              "text": " subclass should be able to use any of them."
            }
          ]
        }
      ]
    }
