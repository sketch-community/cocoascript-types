    "doc://com.apple.documentation/documentation/appkit/nsviewlayercontentsredrawpolicy/nsviewlayercontentsredrawnever": {
      "title": "NSViewLayerContentsRedrawNever",
      "type": "topic",
      "identifier": "doc://com.apple.documentation/documentation/appkit/nsviewlayercontentsredrawpolicy/nsviewlayercontentsredrawnever",
      "kind": "symbol",
      "role": "symbol",
      "url": "/documentation/appkit/nsviewlayercontentsredrawpolicy/nsviewlayercontentsredrawnever",
      "abstract": [
        {
          "type": "text",
          "text": "Leave the layer's contents alone. Never mark the layer as needing display, or draw the view's contents to the layer. This is how developer created layers (layer-hosting views) are treated."
        }
      ]
    },
    "doc://com.apple.documentation/documentation/appkit/nsviewlayercontentsredrawpolicy/nsviewlayercontentsredrawduringviewresize": {
      "title": "NSViewLayerContentsRedrawDuringViewResize",
      "type": "topic",
      "identifier": "doc://com.apple.documentation/documentation/appkit/nsviewlayercontentsredrawpolicy/nsviewlayercontentsredrawduringviewresize",
      "kind": "symbol",
      "role": "symbol",
      "url": "/documentation/appkit/nsviewlayercontentsredrawpolicy/nsviewlayercontentsredrawduringviewresize",
      "abstract": [
        {
          "type": "text",
          "text": "Resize the viewâ€™s backing-layer and redraw the view to the layer when the view's size changes. If the resize is animated, AppKit will drive the resize animation itself and will do this resize and redraw at each step of the animation. Affected parts of the layer will also be redrawn when the view is marked as needing display. This mode is a superset of "
        },
        {
          "type": "reference",
          "isActive": true,
          "identifier": "doc://com.apple.documentation/documentation/appkit/nsviewlayercontentsredrawpolicy/nsviewlayercontentsredrawonsetneedsdisplay"
        },
        {
          "type": "text",
          "text": ". This is the way that layer-backed views are currently treated."
        }
      ]
    },
    "doc://com.apple.documentation/documentation/appkit/nsviewlayercontentsredrawpolicy/nsviewlayercontentsredrawbeforeviewresize": {
      "title": "NSViewLayerContentsRedrawBeforeViewResize",
      "type": "topic",
      "identifier": "doc://com.apple.documentation/documentation/appkit/nsviewlayercontentsredrawpolicy/nsviewlayercontentsredrawbeforeviewresize",
      "kind": "symbol",
      "role": "symbol",
      "url": "/documentation/appkit/nsviewlayercontentsredrawpolicy/nsviewlayercontentsredrawbeforeviewresize",
      "abstract": [
        {
          "type": "text",
          "text": "Resize the layer and redraw the view to the layer when the view's size changes. This will be done just once at the beginning of a resize animation, not at each frame of the animation. Affected parts of the layer will also be redrawn when the view is marked as needing display. This mode is a superset of "
        },
        {
          "type": "reference",
          "isActive": true,
          "identifier": "doc://com.apple.documentation/documentation/appkit/nsviewlayercontentsredrawpolicy/nsviewlayercontentsredrawonsetneedsdisplay"
        },
        {
          "type": "text",
          "text": "."
        }
      ]
    },
    "doc://com.apple.documentation/documentation/appkit/nsviewlayercontentsredrawpolicy/nsviewlayercontentsredrawcrossfade": {
      "title": "NSViewLayerContentsRedrawCrossfade",
      "type": "topic",
      "identifier": "doc://com.apple.documentation/documentation/appkit/nsviewlayercontentsredrawpolicy/nsviewlayercontentsredrawcrossfade",
      "kind": "symbol",
      "role": "symbol",
      "url": "/documentation/appkit/nsviewlayercontentsredrawpolicy/nsviewlayercontentsredrawcrossfade",
      "abstract": [
        {
          "type": "text",
          "text": "Redraw the layer contents at the new size and crossfade from the old contents to the new contents. Use this in conjunction with the "
        },
        {
          "type": "reference",
          "isActive": true,
          "identifier": "doc://com.apple.documentation/documentation/appkit/nsviewlayercontentsplacement"
        },
        {
          "type": "text",
          "text": " constants to get a nice crossfade animation for complex layer-backed views that cannot update correctly at each step of the animation. "
        }
      ]
    },
