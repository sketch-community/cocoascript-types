    "doc://com.apple.documentation/documentation/appkit/nsviewlayercontentsredrawpolicy/nsviewlayercontentsredrawonsetneedsdisplay": {
      "title": "NSViewLayerContentsRedrawOnSetNeedsDisplay",
      "type": "topic",
