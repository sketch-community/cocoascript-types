      "kind": "content",
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "When an application performs a find action, it should send this message to the responder chain."
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "A responder of "
            },
            {
              "type": "codeVoice",
              "code": "performTextFinderAction:"
            },
            {
              "type": "text",
              "text": " is responsible for creating and owning an instance of "
            },
            {
              "type": "codeVoice",
              "code": "NSTextFinder"
            },
            {
              "type": "text",
              "text": ". Before any other messages are sent to the "
            },
            {
              "type": "codeVoice",
              "code": "NSTextFinder"
            },
            {
              "type": "text",
              "text": ", you should set its 'client' property to an object which implements the "
            },
            {
              "type": "codeVoice",
              "code": "NSTextFinderClient"
            },
            {
              "type": "text",
              "text": " protocol."
            }
          ]
        },
        {
          "type": "aside",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "Before OS X v10.7, the default action for these menu items was "
                },
                {
                  "type": "reference",
                  "isActive": true,
                  "identifier": "doc://com.apple.documentation/documentation/appkit/nstextview/1449525-performfindpanelaction"
                },
                {
                  "type": "text",
                  "text": ". Whenever possible which you should update your implementation to use this new action."
                }
              ]
            }
          ],
          "style": "note",
          "name": "Note"
        }
      ]
    }
