        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "This method is useful when you want to modify some number of views and then display only the ones that were modified."
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "You rarely need to invoke this method. "
            },
            {
              "type": "codeVoice",
              "code": "NSWindow"
            },
            {
              "type": "text",
              "text": " objects normally record which of their views need display and display them automatically on each pass through the event loop."
            }
          ]
        }
      ]
