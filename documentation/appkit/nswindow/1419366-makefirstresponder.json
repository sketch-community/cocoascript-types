          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The responder to set as the window’s first responder. "
                },
                {
                  "type": "codeVoice",
                  "code": "nil"
                },
                {
                  "type": "text",
                  "text": " makes the window its first responder."
                }
              ]
            }
          ]
        }
      ]
    },
