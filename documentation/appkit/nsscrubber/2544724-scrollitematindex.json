      "parameters": [
        {
          "name": "index",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The index of the item to be scrolled. Indexes range between "
                },
                {
                  "type": "codeVoice",
                  "code": "0"
                },
                {
                  "type": "text",
                  "text": " and "
                },
                {
                  "type": "codeVoice",
                  "code": "n-1"
                },
                {
                  "type": "text",
                  "text": ", where "
                },
                {
                  "type": "codeVoice",
                  "code": "n"
                },
                {
                  "type": "text",
                  "text": " is the number of items displayed in the scrubber."
                }
              ]
            }
          ]
        },
        {
          "name": "alignment",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The position the item should be scrolled to. For possible values, see "
                },
                {
                  "type": "reference",
                  "isActive": true,
                  "identifier": "doc://com.apple.documentation/documentation/appkit/nsscrubberalignment"
                },
                {
                  "type": "text",
                  "text": ". If "
                },
                {
                  "type": "reference",
                  "isActive": true,
                  "identifier": "doc://com.apple.documentation/documentation/appkit/nsscrubberalignment/nsscrubberalignmentnone"
                },
                {
                  "type": "text",
                  "text": ", the scrubber scrolls the minimum distance required to make the item visible."
                }
              ]
            }
          ]
        }
      ]
    },
