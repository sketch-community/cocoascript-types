          "inlineContent": [
            {
              "type": "text",
              "text": "This property contains a standard six-element transformation matrix as used in the PostScript language, specifically with the "
            },
            {
              "type": "codeVoice",
              "code": "makefont"
            },
            {
              "type": "text",
              "text": " operator. In most cases, with a font of "
            },
            {
              "type": "codeVoice",
              "code": "fontSize"
            },
            {
              "type": "text",
              "text": ", this matrix is ["
            },
            {
              "type": "codeVoice",
              "code": "fontSize"
            },
            {
              "type": "text",
              "text": " 0 0 "
            },
            {
              "type": "codeVoice",
