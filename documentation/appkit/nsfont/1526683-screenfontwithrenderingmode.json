          "inlineContent": [
            {
              "type": "text",
              "text": "For valid rendering modes, see "
            },
            {
              "type": "reference",
              "isActive": true,
              "identifier": "doc://com.apple.documentation/documentation/appkit/nsfontrenderingmode"
            },
