      "parameters": [
        {
          "name": "item",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "An item in the receiver."
                }
              ]
            },
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "Starting in OS X version 10.5,  passing "
                },
                {
                  "type": "codeVoice",
                  "code": "'nil'"
                },
                {
                  "type": "text",
                  "text": " will reload everything under the root in the outline view."
                }
              ]
            }
          ]
        },
        {
          "name": "reloadChildren",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "If "
                },
                {
                  "type": "reference",
                  "isActive": false,
                  "identifier": "doc://com.apple.documentation/documentation/objectivec/yes"
                },
                {
                  "type": "text",
                  "text": ", recursively reloads "
                },
                {
                  "type": "codeVoice",
                  "code": "item"
                },
                {
                  "type": "text",
                  "text": " and its children. If "
                },
                {
                  "type": "reference",
                  "isActive": false,
                  "identifier": "doc://com.apple.documentation/documentation/objectivec/no"
                },
                {
                  "type": "text",
                  "text": ", reloads "
                },
                {
                  "type": "codeVoice",
                  "code": "item"
                },
                {
                  "type": "text",
                  "text": " only (identical to "
                },
                {
                  "type": "reference",
                  "isActive": true,
                  "identifier": "doc://com.apple.documentation/documentation/appkit/nsoutlineview/1531263-reloaditem"
                },
                {
                  "type": "text",
                  "text": ")."
                }
              ]
            },
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "It is not necessary, or efficient, to reload children if the item is not expanded."
                }
              ]
            }
          ]
        }
      ]
    }
