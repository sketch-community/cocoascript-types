  "abstract": [
    {
      "type": "text",
      "text": "When set, the content view consumes the full size of the window; it can be combined with other window style masks, but is only respected for windows with a title bar. Using this mask opts in to layer backing. Use the "
    },
    {
      "type": "reference",
      "isActive": true,
      "identifier": "doc://com.apple.documentation/documentation/appkit/nswindow/1419124-contentlayoutrect"
    },
    {
      "type": "text",
      "text": " or "
    },
    {
      "type": "reference",
      "isActive": true,
      "identifier": "doc://com.apple.documentation/documentation/appkit/nswindow/1419094-contentlayoutguide"
    },
    {
      "type": "text",
      "text": " to lay out views underneath the title bar-toolbar area."
    }
  ],
