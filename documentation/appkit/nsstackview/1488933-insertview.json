          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The gravity area that you are adding the specified view to. Valid values are those in the "
                },
                {
                  "type": "reference",
                  "isActive": true,
                  "identifier": "doc://com.apple.documentation/documentation/appkit/nsstackviewgravity"
                },
                {
                  "type": "text",
                  "text": " enumeration."
                }
              ]
