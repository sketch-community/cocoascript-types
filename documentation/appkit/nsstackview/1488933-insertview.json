        {
          "name": "index",
          "content": [
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "The index position, within the gravity area, for the new view. The position of index "
                },
                {
                  "type": "codeVoice",
                  "code": "0"
                },
                {
                  "type": "text",
                  "text": " depends on the stack view layout direction and, for a horizontal stack view, on the user interface layout direction:"
                }
              ]
            },
            {
              "type": "unorderedList",
              "items": [
                {
                  "content": [
                    {
                      "type": "paragraph",
                      "inlineContent": [
                        {
                          "type": "newTerm",
                          "inlineContent": [
                            {
                              "type": "text",
                              "text": "Horizontal"
                            }
                          ]
                        },
                        {
                          "type": "text",
                          "text": ": The "
                        },
                        {
                          "type": "codeVoice",
                          "code": "0"
                        },
                        {
                          "type": "text",
                          "text": " index for a gravity area is at the leading side, as determined by the value of the inherited "
                        },
                        {
                          "type": "reference",
                          "isActive": true,
                          "identifier": "doc://com.apple.documentation/documentation/appkit/nsview/1483254-userinterfacelayoutdirection"
                        },
                        {
                          "type": "text",
                          "text": " property of the stack view. For a left to right language, index "
                        },
                        {
                          "type": "codeVoice",
                          "code": "0"
                        },
                        {
                          "type": "text",
                          "text": " is at the left of the gravity area."
                        }
                      ]
                    }
                  ]
                },
                {
                  "content": [
                    {
                      "type": "paragraph",
                      "inlineContent": [
                        {
                          "type": "newTerm",
                          "inlineContent": [
                            {
                              "type": "text",
                              "text": "Vertical"
                            }
                          ]
                        },
                        {
                          "type": "text",
                          "text": ": The "
                        },
                        {
                          "type": "codeVoice",
                          "code": "0"
                        },
                        {
                          "type": "text",
                          "text": " index for a gravity area is at the top."
                        }
                      ]
                    }
                  ]
                }
              ]
            },
            {
              "type": "paragraph",
              "inlineContent": [
                {
                  "type": "text",
                  "text": "See the "
