          "inlineContent": [
            {
              "type": "text",
              "text": "This method is invoked automatically when the first instance of a text view is created; you should never need to invoke it directly."
            }
          ]
        },
        {
          "type": "paragraph",
          "inlineContent": [
            {
              "type": "text",
              "text": "Subclasses of  "
            },
            {
              "type": "codeVoice",
              "code": "NSTextView"
            },
            {
              "type": "text",
              "text": " that wish to add support for new service types should override "
            },
            {
              "type": "reference",
              "isActive": false,
              "identifier": "doc://com.apple.documentation/documentation/appkit/nstextview/1449507-registerforservices"
            },
            {
              "type": "text",
              "text": " to call "
            },
            {
              "type": "codeVoice",
              "code": "super"
            },
            {
              "type": "text",
              "text": " and then register their own new types."
            }
          ]
        }
      ]
